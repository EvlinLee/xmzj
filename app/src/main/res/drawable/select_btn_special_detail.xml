<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/margin_large"
                android:bottomRightRadius="@dimen/margin_large"
                android:topLeftRadius="@dimen/margin_large"
                android:topRightRadius="@dimen/margin_large" />
            <solid android:color="@color/btn_press" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/margin_large"
                android:bottomRightRadius="@dimen/margin_large"
                android:topLeftRadius="@dimen/margin_large"
                android:topRightRadius="@dimen/margin_large" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

</selector>