<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorAccent"/>
            <corners android:radius="30dp"/>
            <padding
                android:bottom="3dp"
                android:left="15dp"
                android:right="15dp"
                android:top="3dp" />
        </shape>
        <stroke
            android:width="1px"
            android:color="@color/text_color_666"/>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/module_divide_line"/>
            <corners android:radius="30dp"/>
            <padding
                android:bottom="3dp"
                android:left="15dp"
                android:right="15dp"
                android:top="3dp" />
            <stroke
                android:width="1px"
                android:color="@color/text_color_666"/>
        </shape>
    </item>

</selector>