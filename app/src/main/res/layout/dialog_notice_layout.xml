<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/person_dialog_box_bg"
    android:paddingTop="@dimen/px30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px10dp"
        android:layout_marginTop="@dimen/px10dp"
        android:gravity="center"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="标题" />

    <com.gxtc.huchuan.widget.JustifyTextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="aaaaaaaaaaaaaa" />


    <Button
        android:id="@+id/tv_dialog_confirm"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px20dp"
        android:layout_marginBottom="@dimen/px20dp"
        android:background="@drawable/select_btn_blue"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_l" />

</LinearLayout>