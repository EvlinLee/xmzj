<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_actionbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_whit_bg_radius"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/px58dp"
        android:layout_marginTop="@dimen/px48dp"
        android:text="审核流程"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_l" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic_info"
                android:layout_width="@dimen/px100dp"
                android:layout_height="@dimen/px100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/applicationprocess_icon_txzl" />

            <TextView
                android:id="@+id/input_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px28dp"
                android:gravity="center"
                android:text="填写资料"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/px80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px30dp"
            android:src="@drawable/applicationprocess_icon_bar_blue" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/px100dp"
                android:layout_height="@dimen/px100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/applicationprocess_icon_tjsh"
                android:id="@+id/pic_commit" />

            <TextView
                android:id="@+id/commit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px28dp"
                android:gravity="center"
                android:text="提交审核"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />
        </LinearLayout>
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="@dimen/px80dp"
            android:layout_marginBottom="@dimen/px30dp"
            android:src="@drawable/applicationprocess_icon_bar_blue" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/px100dp"
                android:layout_height="@dimen/px100dp"
                android:scaleType="centerCrop"
                android:id="@+id/pic_check_result"
                android:src="@drawable/applicationprocess_icon_shjg_1" />

            <TextView
                android:id="@+id/check_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="审核结果"
                android:layout_marginTop="@dimen/px28dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/check_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px70dp"
        android:layout_marginStart="@dimen/margin_middle"
        android:layout_marginEnd="@dimen/margin_middle"
        android:gravity="center"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m"
        android:lineSpacingExtra="3dp"
        tools:text="@string/issue_deal_faild"/>


    <TextView
        android:id="@+id/complete"
        android:layout_width="@dimen/px362dp"
        android:layout_height="@dimen/px88dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px70dp"
        android:layout_marginBottom="@dimen/px30dp"
        android:background="@drawable/select_btn_blue"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_l" />
    <TextView
        android:id="@+id/tx_enter"
        android:layout_width="@dimen/px362dp"
        android:layout_height="@dimen/px88dp"
        android:layout_gravity="center"
        android:background="@drawable/select_btn_blue"
        android:gravity="center"
        android:text="进入圈子"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="@dimen/px62dp"
        android:textSize="@dimen/textSize_l" />
</LinearLayout>