<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_whit_bg_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_circle_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:gravity="center"
        android:text="验证原密码"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:gravity="center"
        android:text="为保证你的数据安全，修改密码前请填写原密码："
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_ml" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:layout_marginLeft="@dimen/px28dp"
        android:layout_marginRight="@dimen/px40dp"
        android:layout_marginTop="@dimen/px20dp"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:background="@drawable/input_bg"
        android:inputType="textPassword"
        android:textColor="@color/text_color_999"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/textSize_m"
        android:hint="请输入密码"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/px20dp"
        android:layout_height="@dimen/px96dp"
        android:background="@drawable/btn_gray_dialog_selector_stroke"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#2b8cff"
            android:textSize="@dimen/textSize_m"
            android:text="取消" />
        <TextView
            style="@style/item_line_vertical"
           />
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#2b8cff"
            android:textSize="@dimen/textSize_m"
            android:text="确定" />

    </LinearLayout>
</LinearLayout>