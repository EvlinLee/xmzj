<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/px20dp"
    android:layout_marginRight="@dimen/px20dp"
    android:orientation="vertical"
    style="@style/item_click_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px180dp"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/px10dp"
            android:layout_marginTop="@dimen/px20dp"
            android:gravity="left"
            android:maxLines="2"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_ml"
            tools:text="我用我的心，去看去感觉，就算是执迷，让我执迷不悔" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_video_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/news_icon_top" />


            <TextView
                android:id="@+id/tv_video_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px20dp"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/textSize_xs"
                android:layout_toRightOf="@+id/iv_video_property"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="8"
                tools:text="作者作者作者作者作者" />

            <TextView
                android:id="@+id/tv_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px12dp"
                android:textColor="@color/text_color_999"
                android:layout_toRightOf="@+id/tv_video_author"
                android:textSize="@dimen/textSize_xs"
                tools:text="21分钟前" />



            <ImageView
                android:id="@+id/iv_shield"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="@dimen/margin_tiny"
                android:paddingLeft="@dimen/margin_small"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px10dp"
                android:src="@drawable/circle_home_icon_cha"
                android:visibility="visible"/>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_video_cover"
            android:layout_width="@dimen/px210dp"
            android:layout_height="@dimen/px147dp"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginLeft="@dimen/px10dp"
            android:layout_marginTop="@dimen/px20dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/px75dp"
            android:layout_height="@dimen/px75dp"
            android:layout_gravity="center"
            android:src="@drawable/jz_play_normal"
            android:scaleType="centerInside"/>

    </FrameLayout>

    </LinearLayout>

    <View
        style="@style/item_line" />

</LinearLayout>