<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line"/>

            <RelativeLayout
                android:id="@+id/rl_account_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="账号ID"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m"/>

                <TextView
                    android:id="@+id/account_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    tools:text="13610089957"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line"/>

            <RelativeLayout
                android:id="@+id/rl_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="绑定手机"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m"
                    />
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px16dp"
                    android:layout_toLeftOf="@+id/iv_next2"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m"/>

                <ImageView
                    android:id="@+id/iv_next2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_icon_more"/>
            </RelativeLayout>
            <View style="@style/item_line"/>
            <RelativeLayout
                android:id="@+id/rl_cind_wei_xin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <TextView
                    android:id="@+id/weixin_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px16dp"
                    android:layout_toLeftOf="@+id/iv_next3"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m"/>

                <ImageView
                    android:id="@+id/iv_next3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_icon_more"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:text="绑定微信"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m"/>
            </RelativeLayout>

            <View style="@style/item_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line"/>

            <RelativeLayout
                android:id="@+id/rl_edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="修改登录密码"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m"
                    />

                <TextView
                    android:id="@+id/tv_edit_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px16dp"
                    android:layout_toLeftOf="@+id/iv_next7"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m"/>

                <ImageView
                    android:id="@+id/iv_next7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_icon_more"/>
            </RelativeLayout>

            <View style="@style/item_line"/>

            <TextView
                android:id="@+id/ed_pay_pwd"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="修改支付密码"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:drawableRight="@drawable/person_icon_more"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                />
            <View style="@style/item_line"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>