<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_buyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <com.gxtc.huchuan.widget.CircleImageView
            android:id="@+id/headPic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:src="@drawable/bg" />

        <TextView
            android:id="@+id/text_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_tiny"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="购买人:追风" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/margin_10"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m"
        tools:text="2017-12-22" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_buyer"
        android:paddingLeft="@dimen/margin_10"
        android:layout_alignLeft="@+id/layout_buyer"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="价格:￥100" />
    <TextView
        android:id="@+id/text_pent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_buyer"
        android:paddingLeft="@dimen/margin_10"
        android:layout_toRightOf="@+id/text_price"
        android:textColor="@color/circle_main_Btn_fabiao"
        android:textSize="@dimen/textSize_m"
        tools:text="返5%" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_time"
        android:layout_alignParentEnd="true"
        android:paddingRight="@dimen/margin_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_mouney_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_666"
            android:text="佣金:" />
        <TextView
            android:id="@+id/text_mouney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10"
            android:textSize="@dimen/textSize_m"
            android:layout_marginRight="@dimen/px5dp"
            android:textColor="@color/color_price_ec6b46"
            tools:text="￥5" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/color_7ecef4"
            tools:text="(已退款)" />
    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
