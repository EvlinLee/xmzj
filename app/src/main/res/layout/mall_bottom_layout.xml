<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">
    <View style="@style/item_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mall_shouyel"
            style="@style/mall_bottom_style"
            android:drawableTop="@drawable/icon_shouye_normal"
            android:text="首页" />

        <TextView
            android:id="@+id/mall_fenlei"
            style="@style/mall_bottom_style"
            android:drawableTop="@drawable/icon_fenlei_normal"
            android:text="分类" />

        <TextView
            android:id="@+id/mall_huodong"
            style="@style/mall_bottom_style"
            android:drawableTop="@drawable/icon_huodong_normal"
            android:text="活动" />

        <TextView
            android:id="@+id/mall_wode"
            style="@style/mall_bottom_style"
            android:drawableTop="@drawable/icon_wode_normal"
            android:text="我的" />
    </LinearLayout>
</LinearLayout>
