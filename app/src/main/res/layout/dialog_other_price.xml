<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10"
        android:text="其他金额"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/px30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额（元）："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/px28dp"/>

        <EditText
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:maxLength="13"
            android:singleLine="true"
            android:textSize="@dimen/px28dp"
            tools:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px20dp"
        android:paddingRight="@dimen/px20dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/shape_grey_btn"
            android:clickable="true"
            android:paddingBottom="@dimen/px10dp"
            android:paddingLeft="@dimen/px40dp"
            android:paddingRight="@dimen/px40dp"
            android:paddingTop="@dimen/px10dp"
            android:text="取消"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_asok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/shape_btn_blue_normal"
            android:clickable="true"
            android:paddingBottom="@dimen/px10dp"
            android:paddingLeft="@dimen/px40dp"
            android:paddingRight="@dimen/px40dp"
            android:paddingTop="@dimen/px10dp"
            android:text="确定"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>