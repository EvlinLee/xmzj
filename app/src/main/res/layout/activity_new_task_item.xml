<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
  <TextView
      android:id="@+id/follow_friends"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/textSize_ml"
      android:textColor="@color/text_color_333"
      android:drawableLeft="@drawable/person_icon_xsrw_gzhy"
      android:layout_marginLeft="@dimen/px38dp"
      android:drawablePadding="@dimen/px18dp"
      android:layout_marginTop="@dimen/px24dp"
      android:text="关注好友"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px38dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px22dp"
            android:paddingRight="@dimen/px10dp"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="愿你驰骋万里，归来依旧是少年"
            />
        <TextView
            android:id="@+id/progress_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px26dp"
            android:paddingBottom="@dimen/px22dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/person_icon_xsrw_button"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_m"
            android:text="进度：6/10"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_ml"
        android:textColor="@color/text_color_333"
        android:drawableLeft="@drawable/person_icon_xsrw_sjrw"
        android:layout_marginLeft="@dimen/px38dp"
        android:drawablePadding="@dimen/px18dp"
        android:paddingBottom="@dimen/px20dp"
        android:text="任务金额：￥1.00"
        />
    <LinearLayout
        android:id="@+id/blue_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px10dp"
        android:background="#41abff"
        android:gravity="center|left"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/px60dp"
            android:layout_height="@dimen/px60dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/px24dp"
            android:src="@drawable/bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px16dp"
            android:textColor="@color/white"
            android:text="财神大咖已完成美丽任务，获取5.00￥赏金"/>
    </LinearLayout>
</LinearLayout>