<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_larger"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_middle"
        android:text="请输入密码"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_ml"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle">

        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="number"
            android:background="@color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_line"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dot0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_larger"
        android:background="@color/background_tab_pressed"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_l"
        android:text="确认"/>

</LinearLayout>
