<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_whit_bg_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:gravity="center"
        android:text="请选择要同步的圈子"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"/>

    <TextView style="@style/item_line"/>

    <ListView
        android:id="@+id/choose_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/divide_line"
        android:dividerHeight="1px" />

    <TextView style="@style/item_line"/>

    <TextView
        android:id="@+id/tv_issue_tongbu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:drawableRight="@drawable/person_icon_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:text="是否同步到圈子"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"/>

    <TextView style="@style/item_line"/>

    <TextView
        android:id="@+id/tv_has_tongbu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        tools:text="已经同步的圈子"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_m"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96dp"
        android:layout_marginTop="@dimen/px80dp"
        android:background="@drawable/btn_gray_dialog_selector_stroke"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView style="@style/item_line_vertical"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#2b8cff"
            android:textSize="@dimen/textSize_m"/>

    </LinearLayout>
</LinearLayout>