<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/live_intro_follow_head"
            android:layout_width="@dimen/px60dp"
            android:layout_height="@dimen/px60dp"
            android:layout_margin="@dimen/margin_10"
            android:clickable="true"
            tools:src="@drawable/live_head_icom_temp"/>

        <TextView
            android:id="@+id/live_intro_follow_ownername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="end"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            android:text="查看他的课程"/>

        <ImageView
            android:id="@+id/live_intro_follow_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px24dp"
            android:clickable="true"
            android:src="@drawable/person_icon_more"/>
    </LinearLayout>


</LinearLayout>
