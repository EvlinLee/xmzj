<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingTop="@dimen/margin_small"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_manage_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dragView_msg_article"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_gravity="right"
                android:background="@drawable/shape_unread_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_s"
                android:visibility="invisible"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/img_new_manager"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/px18dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon_wzgl"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_s"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_manage_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="文章管理"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_s"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dragView_msg_class"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_gravity="right"
                android:background="@drawable/shape_unread_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_s"
                android:visibility="invisible"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/img_live_manager"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/px18dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon_kcgl"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_s"/>

        </FrameLayout>


        <TextView
            android:id="@+id/tv_manage_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="课程管理"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_s"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_circle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dragView_msg_lass_circle"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_gravity="right"
                android:background="@drawable/shape_unread_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_s"
                android:visibility="invisible"
                tools:visibility="visible"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/px18dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon_qzgl"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_s"/>

        </FrameLayout>


        <TextView
            android:id="@+id/tv_manage_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="圈子管理"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_s"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_deal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/dragView_msg_lass_trance"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_gravity="right"
                android:background="@drawable/shape_unread_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_s"
                android:visibility="invisible"
                tools:visibility="visible"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/px18dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon_jygl"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_s"/>


        </FrameLayout>


        <TextView
            android:id="@+id/tv_manage_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="交易管理"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_s"/>

    </LinearLayout>
</LinearLayout>