<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/margin_middle"
    android:layout_marginRight="@dimen/margin_middle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_middle"
        android:paddingBottom="@dimen/margin_middle"
        >
        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2017年5月21"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_666"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_isSett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未结算"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_666"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/item_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30dp"
            android:layout_marginBottom="@dimen/px30dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/rl_face_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.gxtc.huchuan.widget.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/px62dp"
                    android:layout_height="@dimen/px62dp"
                    android:src="@drawable/person_icon_head_logo_62"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ALing"
                    android:layout_toRightOf="@id/iv_head"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="标题"
                android:layout_below="@id/rl_face_name"
                android:layout_marginTop="@dimen/px24dp"
                android:drawableLeft="@drawable/person_live_distribution_icon_circle"
                android:drawablePadding="@dimen/px20dp"
                android:layout_marginRight="@dimen/px30dp"
                />

        </RelativeLayout>

        <View
            style="@style/item_line_vertical"
            android:layout_marginLeft="@dimen/px24dp"
            android:layout_marginRight="@dimen/px24dp"
            android:layout_marginTop="@dimen/px30dp"
            android:layout_marginBottom="@dimen/px30dp"
            />

        <LinearLayout
            android:id="@+id/ll_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/rl_left"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fb4717"
                android:text="￥0"
                android:textSize="@dimen/textSize_xl"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预计佣金"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>