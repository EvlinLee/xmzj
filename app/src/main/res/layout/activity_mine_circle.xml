<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mine_cicle_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginTop="@dimen/px20dp"
            android:text="创建的圈子"
            android:visibility="visible"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_l"
            tools:visibility="gone"/>

        <com.gxtc.commlibrary.recyclerview.RecyclerView
            android:id="@+id/rv_mine_circle_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_marginTop="@dimen/px20dp" />

        <TextView
            android:id="@+id/tv_mine_circle_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginTop="@dimen/px20dp"
            android:text="加入的圈子"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_l" />

        <com.gxtc.commlibrary.recyclerview.RecyclerView
            android:id="@+id/rv_mine_circle_jion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_marginTop="@dimen/px20dp"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>