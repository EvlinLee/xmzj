<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_whit_bg_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_circle_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:gravity="center"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:text="确认手机号码"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:gravity="center"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:text="已发送验证码短信至号码："
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_ml"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:text="+8617301673845"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_ml"/>

    <EditText
        android:id="@+id/edit_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:inputType="phone"
        android:singleLine="true"
        android:padding="@dimen/margin_middle"
        android:textSize="@dimen/textSize_m"
        android:background="@drawable/input_bg"
        android:hint="请输入验证码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96dp"
        android:layout_marginTop="@dimen/margin_middle"
        android:background="@drawable/btn_gray_dialog_selector_stroke"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#2b8cff"
            android:textSize="@dimen/textSize_m"/>

        <TextView style="@style/item_line_vertical"/>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#2b8cff"
            android:textSize="@dimen/textSize_m"/>

    </LinearLayout>
</LinearLayout>