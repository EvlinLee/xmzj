<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="@dimen/px420dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rc_ic_bubble_right_file"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="@dimen/px90dp"
                android:layout_height="@dimen/px90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/live_list_place_holder_120" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_small"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                tools:text="好友可见。0：所有人可见；1、好友可见" />
        </LinearLayout>

        <View
            style="@style/item_line"
            android:layout_marginTop="@dimen/margin_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_10"
            android:paddingTop="@dimen/margin_tiny"
            android:paddingBottom="@dimen/margin_tiny"
            android:text="个人名片"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_xs" />
    </LinearLayout>
</LinearLayout>
