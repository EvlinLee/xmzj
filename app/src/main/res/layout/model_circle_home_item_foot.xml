<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px10dp"
    android:layout_marginBottom="@dimen/px10dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="@dimen/px10dp"
        android:paddingTop="@dimen/px10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_circle_home_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/circle_home_icon_comment"
            android:drawablePadding="@dimen/px10dp"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_circle_home_like"
        android:layout_width="0dp"
        android:paddingBottom="@dimen/px10dp"
        android:paddingTop="@dimen/px10dp"
        android:layout_height="match_parent"
        style="@style/item_click_bg"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_circle_home_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/circle_home_icon_zan"
            android:drawablePadding="@dimen/px10dp"
            android:text="3"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_circle_home_share"
        android:layout_width="0dp"
        android:paddingBottom="@dimen/px10dp"
        android:paddingTop="@dimen/px10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/item_click_bg"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/px10dp"
            android:src="@drawable/circle_home_icon_share"
            android:text="3"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />
    </RelativeLayout>
</LinearLayout>