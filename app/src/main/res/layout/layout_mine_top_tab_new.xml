<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    tools:showIn="@layout/fragment_mine_new">

    <RelativeLayout
        android:id="@+id/rl_top_dymic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_top_dymic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="通知"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/color_ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <View
        style="@style/item_line_vertical"
        android:layout_marginBottom="@dimen/px10dp"
        android:layout_marginTop="@dimen/px10dp"/>

    <RelativeLayout
        android:id="@+id/rl_top_visitor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_top_visitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="访客"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/color_ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <View
        style="@style/item_line_vertical"
        android:layout_marginBottom="@dimen/px10dp"
        android:layout_marginTop="@dimen/px10dp"/>

    <RelativeLayout
        android:id="@+id/rl_top_foucs"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_top_focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_top_focus"
            android:layout_marginTop="@dimen/px10dp"
            android:gravity="center"
            android:text="关注"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/color_ffffff"/>
    </RelativeLayout>

    <View
        style="@style/item_line_vertical"
        android:layout_marginBottom="@dimen/px10dp"
        android:layout_marginTop="@dimen/px10dp"/>

    <RelativeLayout
        android:id="@+id/rl_top_fans"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_top_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_top_fans"
            android:layout_marginTop="@dimen/px10dp"
            android:gravity="center"
            android:text="粉丝"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/color_ffffff"/>
    </RelativeLayout>

</LinearLayout>