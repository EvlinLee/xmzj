    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:paddingRight="@dimen/margin_middle"
        android:paddingLeft="@dimen/margin_middle">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_m"
            android:gravity="center"
            android:text="店铺：新媒旗舰店"
            android:textColor="@color/text_color_333"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="已发货"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_status"
            android:layout_marginRight="@dimen/margin_medium"
            android:text="2018-4-11 10:39"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_666"/>

    </RelativeLayout>

    <View
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="5dp"

        android:background="@drawable/bg_dotted_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_middle">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/px110dp"
            android:layout_height="@dimen/px110dp"
            android:layout_marginEnd="@dimen/margin_middle"
            android:scaleType="centerCrop"
            android:src="@drawable/live_list_place_holder_120" />

        <LinearLayout
            android:id="@+id/layout_parame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_goods_name"
            android:layout_alignBottom="@+id/tv_type"
            android:layout_marginStart="@dimen/margin_middle"
            android:layout_marginTop="2dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="398.00"
                android:layout_weight="1"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_s" />

            <TextView
                android:id="@+id/tv_mun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="×1"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_head"
            android:layout_toStartOf="@id/layout_parame"
            android:maxLines="2"
            android:text="动态ip移动注册卡,你是对方阿斯蒂芬第三方撒旦飞洒啊士大夫似的就能发水岸东方撒"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_name"
            android:layout_toEndOf="@id/img_head"
            android:layout_alignBottom="@+id/img_head"
            android:gravity="bottom"
            android:text="电话卡"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_ms" />

        <!-- <TextView
