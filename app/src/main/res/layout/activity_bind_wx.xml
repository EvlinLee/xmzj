<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:orientation="vertical">

    <View style="@style/model_line"/>

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:background="@drawable/selector_touch"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="微信名"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"/>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入微信名"
                android:singleLine="true"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

        </LinearLayout>

        <View
            style="@style/item_line"
            android:layout_marginLeft="@dimen/px24dp"
            android:layout_marginRight="@dimen/px24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:background="@drawable/selector_touch"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="微信号"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"/>

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="请输入微信号"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"/>


</LinearLayout>