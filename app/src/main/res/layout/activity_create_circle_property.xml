<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px55dp"
        android:text="选择费用类型"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px24dp"
        android:text="将决定别人进入圈子时是否收费"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_m"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_medium"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_free"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_property_icon_free"/>

            <TextView
                android:id="@+id/tv_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:text="免费"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_ml"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_pay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_property_icon_pay"/>

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:text="付费"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_ml"/>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/choose_classify"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/shape_news_common"
        android:drawableEnd="@drawable/person_icon_more_down"
        android:drawablePadding="@dimen/margin_middle"
        android:gravity="center"
        android:paddingBottom="@dimen/px10dp"
        android:paddingLeft="@dimen/px28dp"
        android:paddingTop="@dimen/px10dp"
        android:text="选择分类"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px76dp"
        android:text="选择私密将不会公开你的圈子，只能通过邀请进入"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_m"/>

    <RadioGroup
        android:id="@+id/choose_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_middle"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/selector_rb_topic_bg"
            android:paddingLeft="@dimen/px40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公开"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <RadioButton
            android:id="@+id/rb_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/selector_rb_topic_bg"
            android:paddingLeft="@dimen/px40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="私密"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px76dp"
        android:text="选择不创建，圈子将会没有群聊功能"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_m"/>

    <RadioGroup
        android:id="@+id/choose_creat_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/px25dp"
        android:layout_marginTop="@dimen/margin_middle"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_creat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/selector_rb_topic_bg"
            android:paddingLeft="@dimen/px40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <RadioButton
            android:id="@+id/rb_not_creat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/selector_rb_topic_bg"
            android:paddingLeft="@dimen/px40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不创建"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

    </RadioGroup>



</LinearLayout>