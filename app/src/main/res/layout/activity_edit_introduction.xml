<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_introduction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gxtc.huchuan.ui.mine.editinfo.EditIntroductionActivity">

    <!-- <include layout="@layout/layout_editinfo_title" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400dp"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginRight="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:background="@drawable/shap_introduct_bg">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:gravity="left"
            android:hint="介绍下自己"
            android:maxLength="50"
            android:paddingLeft="@dimen/px20dp"
            android:paddingRight="@dimen/px20dp"
            android:paddingTop="@dimen/px20dp"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/iv_botton_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/px20dp"
            android:paddingRight="@dimen/px20dp"
            android:src="@drawable/person_edit_delete"
            android:text="还能输入300字"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
