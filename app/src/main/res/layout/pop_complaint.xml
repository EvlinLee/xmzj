<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_complaint_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_whit_bg_radius"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/px20dp"
        android:text="举报文章问题"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_l"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_complaint_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/person_icon_more"
        android:padding="@dimen/px20dp"
        android:text="我要吐槽"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_l" />

    <View style="@style/item_line" />

    <TextView
        android:id="@+id/tv_complaint_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/px20dp"
        android:text="完成"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_l" />
</LinearLayout>