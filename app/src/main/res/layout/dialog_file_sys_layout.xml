<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_whit_bg_radius"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:gravity="center"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        android:text="请选择谁可见"/>
    <TextView style="@style/item_line" />

    <TextView
        android:id="@+id/tv_issue_tongbu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:drawableRight="@drawable/person_icon_more"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:gravity="center_vertical"
        android:text="是否同步到圈子"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />
    <TextView style="@style/item_line" />
    <TextView
        android:id="@+id/tv_circle_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px80dp"
        android:paddingLeft="@dimen/px28dp"
        android:paddingRight="@dimen/px40dp"
        android:gravity="center_vertical"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_m" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/px140dp"
        android:layout_height="@dimen/px96dp"
        android:background="@drawable/btn_gray_dialog_selector_stroke"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"
            android:text="取消" />
        <TextView
            style="@style/item_line_vertical"
           />
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#2b8cff"
            android:textSize="@dimen/textSize_m"
            android:text="确定" />

    </LinearLayout>
</LinearLayout>