<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_medium"
    android:paddingLeft="@dimen/margin_middle"
    android:paddingEnd="@dimen/margin_middle"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/margin_middle"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_head_icon_80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_head"
        android:minHeight="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_ms"
                android:textColor="@color/text_color_999"
                tools:text="程序猫"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize_ms"
                android:textColor="@color/text_color_999"
                tools:text="05-29 21:22:11"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="140dp"
            android:maxHeight="155dp"
            android:scaleType="centerCrop"
            android:background="@color/grey_efef"
            tools:src="@drawable/live_icon_return"/>

        <View style="@style/item_line"
            android:layout_marginTop="@dimen/margin_middle"/>

    </LinearLayout>

</RelativeLayout>