<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_account_safe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="账号与安全"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line"/>

            <TextView
                android:id="@+id/tv_ys"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="隐私设置"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line"/>

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="意见反馈"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line"/>

            <!--<TextView-->
            <!--android:id="@+id/tv_aboout_us"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/px100dp"-->
            <!--android:background="@drawable/selector_touch"-->
            <!--android:drawableRight="@drawable/person_icon_more"-->
            <!--android:foreground="?android:selectableItemBackground"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingLeft="@dimen/px24dp"-->
            <!--android:paddingRight="@dimen/px24dp"-->
            <!--android:text="关于我们"-->
            <!--android:textColor="@color/text_color_333"/>-->


            <!--<View style="@style/item_line"/>-->

            <!--<TextView-->
            <!--android:id="@+id/tv_join"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/px100dp"-->
            <!--android:background="@drawable/selector_touch"-->
            <!--android:drawableRight="@drawable/person_icon_more"-->
            <!--android:foreground="?android:selectableItemBackground"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingLeft="@dimen/px24dp"-->
            <!--android:paddingRight="@dimen/px24dp"-->
            <!--android:text="加入我们"-->
            <!--android:textColor="@color/text_color_333"/>-->

            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="联系客服"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line" />

            <TextView
                android:id="@+id/tv_shield"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="不看他(她)的动态"
                android:textColor="@color/text_color_333"
                android:visibility="gone"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:foreground="?android:selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100dp"
                    android:background="@drawable/selector_touch"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px24dp"
                    android:paddingRight="@dimen/px24dp"
                    android:text="会话消息提示"
                    android:textColor="@color/text_color_333"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_middle"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/tv_messge_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="消息设置"
                android:visibility="gone"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line"
                  android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_dustbin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="垃圾回收"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line"/>
            <RelativeLayout
                android:id="@+id/clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100dp"
                    android:background="@drawable/selector_touch"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px24dp"
                    android:paddingRight="@dimen/px24dp"
                    android:text="清除缓存"
                    android:textColor="@color/text_color_333"/>

                <TextView
                    android:id="@+id/tv_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/margin_small"
                    android:drawableRight="@drawable/person_icon_more"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/px24dp"
                    android:textColor="@color/text_color_999"
                    tools:text="3M"/>

            </RelativeLayout>

            <View style="@style/item_line"/>
            <TextView
                android:id="@+id/clear_conversation_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="清除聊天记录"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line"/>

            <RelativeLayout
                android:id="@+id/btn_check_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100dp"
                    android:background="@drawable/selector_touch"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px24dp"
                    android:paddingRight="@dimen/px24dp"
                    android:text="检查更新"
                    android:textColor="@color/text_color_333"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_999"
                        tools:text="ssss"/>

                    <TextView
                        android:id="@+id/dragView_setting"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:background="@drawable/shape_unread_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_s"
                        android:visibility="invisible"
                        tools:visibility="visible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/px24dp"
                        android:drawableRight="@drawable/person_icon_more"/>

                </LinearLayout>



            </RelativeLayout>


            <View style="@style/item_line" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:background="@drawable/selector_touch"
                android:drawableRight="@drawable/person_icon_more"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="分享应用给朋友"
                android:textColor="@color/text_color_333"/>

            <View style="@style/item_line"
                    android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line"
                android:visibility="gone"
                tools:visibility="visible"/>

            <View style="@style/item_line"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/label_exit"
                android:textColor="@color/text_color_333"
                android:visibility="gone"
                tools:visibility="visible"/>

            <View style="@style/item_line"
                   android:visibility="gone"/>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@color/module_divide_line"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>