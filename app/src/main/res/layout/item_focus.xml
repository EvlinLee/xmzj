<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/riv_item_focus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/px20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/list_error_img"/>

    <ImageView
        android:id="@+id/iv_item_focus_status"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/px20dp"
        android:src="@drawable/live_attention_normal"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/add_frends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/px20dp"
        android:background="@drawable/shape_border_raido_accent"
        android:textSize="@dimen/textSize_xs"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        android:text="添加"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px20dp"
        android:layout_marginEnd="@dimen/px10dp"
        android:layout_toEndOf="@id/riv_item_focus"
        android:layout_toStartOf="@id/iv_item_focus_status"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_focus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="李子明"/>


        <TextView
            android:id="@+id/tv_item_focus_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:singleLine="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            tools:text="是个帅哥"/>

    </LinearLayout>


    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>