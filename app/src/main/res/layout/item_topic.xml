<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_topic_image_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/margin_middle">


        <RelativeLayout
            android:background="@drawable/live_white_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_item_topic_image"
                android:layout_width="100dp"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                tools:src="@drawable/live_class_icon_temp"
                 />
            <ImageView
                android:id="@+id/iv_item_topic_toll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_item_topic_image"
                android:layout_alignTop="@id/iv_item_topic_image"
                android:src="@drawable/live_homepage_pay" />

            <ImageView
                android:id="@+id/iv_item_topic_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/iv_item_topic_image"
                android:layout_alignTop="@id/iv_item_topic_image"
                android:src="@drawable/live_homepage_free" />
        </RelativeLayout>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/rl_item_topic_image_area"
        android:layout_alignTop="@id/rl_item_topic_image_area"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_toRightOf="@id/rl_item_topic_image_area"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tv_item_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minLines="2"
            android:maxLines="2"
            android:maxEms="10"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="如何扭转命运？如何扭转命运？如何扭转命运？如何扭转命运？如何扭转命运？如何扭转命运？如何扭转命运？" />

        <TextView
            android:id="@+id/tv_item_topic_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="tkljsldfjl"
            android:drawablePadding="@dimen/margin_tiny"
            android:drawableLeft="@drawable/live_homepage_time"
            />

        <TextView
            android:id="@+id/tv_item_topic_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            tools:text="08-09 20:30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_topic_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/live_list_user"
                android:drawablePadding="@dimen/margin_tiny"
                tools:text="1680人次" />

            <TextView
                android:id="@+id/tv_item_topic_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:textColor="@color/color_price_ec6b46"
                tools:text="￥9.99" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_topic_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/live_list_proceed" />

</RelativeLayout>