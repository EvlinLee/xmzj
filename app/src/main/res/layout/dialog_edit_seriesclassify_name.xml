<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/person_dialog_box_bg"
    android:paddingBottom="@dimen/px10dp"
    android:paddingTop="@dimen/px30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px30dp"
        android:gravity="center"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="标题" />

    <EditText
        android:id="@+id/et_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px30dp"
        android:gravity="center"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="aaaaaaaaaaaaaa" />

    <View style="@style/item_line" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divide_line" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/btn_nornal"
            android:textSize="@dimen/textSize_m" />
    </LinearLayout>

</LinearLayout>