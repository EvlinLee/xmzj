<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/px38dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_live_image"
        android:layout_width="@dimen/px330dp"
        android:layout_height="@dimen/px210dp"
        android:layout_gravity="center_horizontal"
        tools:src="@drawable/live_class_icon_temp"/>

    <TextView
        android:id="@+id/tv_live_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px12dp"
        android:layout_marginTop="@dimen/px24dp"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/px8dp"
        android:singleLine="true"
        android:text="十二堂声音美化课"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"/>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px10dp"
        android:layout_marginRight="@dimen/px10dp">

        <TextView
            android:id="@+id/tv_live_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_live_price"
            android:text="9555人报名"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"/>

        <TextView
            android:id="@+id/tv_live_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:text="￥99"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"/>
    </RelativeLayout>

</LinearLayout>