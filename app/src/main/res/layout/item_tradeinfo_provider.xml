<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_head"
                android:layout_marginStart="@dimen/margin_middle"
                android:textSize="@dimen/textSize_m"
                android:textColor="@color/text_color_333"
                tools:text="nangua"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_head_icon_80"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:textSize="@dimen/textSize_l"
            android:textColor="@color/text_color_333"
            tools:text="这是一条标题"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey_F4F4F4">

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:src="@drawable/live_list_place_holder_120"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_cover"
                android:layout_marginEnd="@dimen/margin_middle"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_class_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textSize="@dimen/textSize_m"
                    android:textColor="@color/text_color_333"
                    tools:text="课程名称"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/textSize_s"
                    android:textColor="@color/text_color_999"
                    tools:text="2017-08-01"/>

            </LinearLayout>

        </RelativeLayout>

        <View style="@style/item_line"  />

        <TextView
            android:id="@+id/tv_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_middle"
            android:layout_gravity="end"
            android:drawableRight="@drawable/person_icon_more"
            android:drawablePadding="@dimen/margin_small"
            android:text="查看详情"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_999"/>

    </LinearLayout>

</android.support.v7.widget.CardView>