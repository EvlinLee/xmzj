<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stl_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/margin_middle"
        android:paddingBottom="@dimen/margin_middle"
        app:tl_tab_padding="@dimen/margin_middle"
        app:tl_indicator_color="@color/colorAccent"
        app:tl_indicator_height="1dp"
        app:tl_indicator_style="NORMAL"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/colorAccent"
        app:tl_textUnselectColor="@color/text_color_333"
        app:tl_textsize="@dimen/textSize_m"
        app:tl_underline_color="@color/divide_line" />

    <View style="@style/item_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_profit"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
