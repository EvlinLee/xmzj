<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_specia_cover"
        android:layout_width="@dimen/px250dp"
        android:layout_height="@dimen/px160dp"
        android:layout_margin="@dimen/margin_middle"
        android:scaleType="centerCrop"
        android:src="@drawable/live_class_icon_temp"
                 />

    <TextView
        android:id="@+id/tv_specia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_middle"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_specia_cover"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:text="文章专题文章专题文章专题文章专题文章专题文章专题文章专题文章专题文章专题文章专题"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
       />

    <TextView
        android:id="@+id/tv_type_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_specia_cover"
        android:text="可查看"
        android:layout_toRightOf="@id/iv_specia_cover"
        android:textColor="@color/color_2b8cff"
        android:textSize="@dimen/textSize_s"
 />


    <View
        style="@style/item_line"
android:layout_alignParentBottom="true" />

</RelativeLayout>