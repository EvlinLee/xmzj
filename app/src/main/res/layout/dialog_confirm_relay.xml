<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_middle"
    android:paddingRight="@dimen/margin_middle"
    android:background="@drawable/shape_btn_white">

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:textSize="@dimen/textSize_ml"
        android:textColor="@color/text_color_666"
        android:text="发送给："/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_small">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/margin_middle"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_head_icon_120"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"
            tools:text="南瓜"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:layout_marginTop="@dimen/px20dp"
        android:paddingLeft="@dimen/margin_10"
        android:background="@drawable/input_bg"
        android:textColor="@color/text_color_999"
        android:inputType="textMultiLine"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/textSize_m"
        android:hint="给朋友留言"/>


    <View style="@style/item_line"
        android:layout_marginTop="@dimen/margin_small"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_middle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_666"/>

        <View style="@style/item_line_vertical"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginBottom="@dimen/margin_tiny"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_middle"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>