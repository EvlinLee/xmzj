<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/person_dialog_box_bg">

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_middle"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/textSize_m"
        android:textColor="@color/text_color_333"
        android:text="关闭交易"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_reject_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_middle"
            android:background="?android:selectableItemBackground"
            android:text="1、价格不对"
            android:textColor="@drawable/select_text_color_blue"
            android:textSize="@dimen/textSize_m" />

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_reject_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_middle"
            android:background="?android:selectableItemBackground"
            android:text="2、不想卖了"
            android:textColor="@drawable/select_text_color_blue"
            android:textSize="@dimen/textSize_m" />

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_reject_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_middle"
            android:background="?android:selectableItemBackground"
            android:text="3、缺货"
            android:textColor="@drawable/select_text_color_blue"
            android:textSize="@dimen/textSize_m" />

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_reject_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_middle"
            android:background="?android:selectableItemBackground"
            android:text="4、其他"
            android:textColor="@drawable/select_text_color_blue"
            android:textSize="@dimen/textSize_m" />

        <View style="@style/item_line" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reject_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_middle"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"/>

        <View style="@style/item_line_vertical"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_middle"/>

        <TextView
            android:id="@+id/tv_reject_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_middle"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_m"/>

    </LinearLayout>

</LinearLayout>