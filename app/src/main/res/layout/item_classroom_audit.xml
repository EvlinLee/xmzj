<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:background="@color/white"
              style="@style/item_click_bg"
    >
    <android.support.v7.widget.CardView
        app:cardElevation="@dimen/px8dp"
        android:layout_margin="@dimen/px20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_live_room_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px400dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/live_room_icon_temp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/item_live_room_image"
                    android:layout_alignLeft="@id/item_live_room_image"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@drawable/shape_live_btn"
                    android:drawableLeft="@drawable/live_icon_live"
                    android:drawablePadding="@dimen/margin_tiny"
                    android:padding="@dimen/margin_tiny"
                    android:text="讲课中"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_s" />

                <TextView
                    android:id="@+id/item_live_room_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/live_home_icon_live"
                    android:drawablePadding="@dimen/margin_tiny"
                    android:background="@drawable/shape_live_room_count_bg"
                    android:padding="@dimen/margin_tiny"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_s"
                    tools:text="10000000报名"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <TextView
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:id="@+id/item_live_room_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                tools:text="微课！新年规划九宫格法--找到这9种资源，2017想不成功也难" />

            <TextView
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:id="@+id/item_live_room_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20dp"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/textSize_s"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="微课！新年规划九宫格法--找到这9种资源，2017想不成功也难" />
<View
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/px20dp"
    android:layout_width="@dimen/px50dp"
    android:background="@color/color_e5e5e5"
    android:layout_height="2px"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px20dp">

                    <com.gxtc.huchuan.widget.CircleImageView
                        android:id="@+id/item_live_room_head"
                        android:layout_width="@dimen/px50dp"
                        android:layout_height="@dimen/px50dp"
                        tools:src="@drawable/person_icon_head_120" />

                    <TextView
                        android:id="@+id/item_live_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_color_999"
                        android:textSize="@dimen/textSize_s"
                        tools:text="￥:9.9" />



                    <TextView
                        android:id="@+id/item_live_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/px20dp"
                        android:layout_toEndOf="@+id/item_live_room_head"
                        android:textColor="@color/text_color_999"
                        android:textSize="@dimen/textSize_s"
                        tools:text="小Y老师的家" />

                    <ImageView
                        android:id="@+id/iv_fire"
                        android:layout_toRightOf="@id/item_live_room_name"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/live_icon_hot"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/item_live_room_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px30dp"
                android:layout_marginTop="@dimen/px20dp"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/textSize_m"
                android:visibility="gone"
                tools:text="当我们意识到为时已晚的时候，恰恰是在最早的时候..." />

            <View
                style="@style/item_line"
                android:layout_marginTop="@dimen/margin_tiny" />
            <RelativeLayout
                android:id="@+id/ll_audit_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/px120dp"
                    android:layout_height="@dimen/px68dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_10"
                    android:background="@drawable/btn_blue_selector"
                    android:text="审核"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px28dp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


