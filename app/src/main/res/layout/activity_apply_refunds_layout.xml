<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line" />

            <RelativeLayout
                android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px120dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <ImageView
                    android:id="@+id/pic_head"
                    android:layout_width="@dimen/px80dp"
                    android:layout_height="@dimen/px80dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/pic_head"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m"
                    tools:text="13610089957" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line" />

            <LinearLayout
                android:id="@+id/rl_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="退款金额："
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m" />

                <TextView
                    android:id="@+id/refunds_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px16dp"
                    android:layout_toLeftOf="@+id/iv_next2"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line" />

            <RelativeLayout
                android:id="@+id/rl_account_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="退款原因"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m" />

                <TextView
                    android:id="@+id/refunds_cause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/px10dp"
                    android:drawableRight="@drawable/person_icon_more"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m"
                    tools:text="请选择" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:background="@color/module_divide_line" />

            <LinearLayout
                android:id="@+id/rl_edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/px30dp"
                    android:paddingTop="@dimen/px30dp"
                    android:text="退款说明"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_m" />

                <EditText
                    android:id="@+id/tv_edit_explain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px300dp"
                    android:layout_marginRight="@dimen/px16dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="left"
                    android:hint="选填"
                    android:padding="@dimen/px10dp"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_blue_selector_no_corner"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_m" />

</RelativeLayout>