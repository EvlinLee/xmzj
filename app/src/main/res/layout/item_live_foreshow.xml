<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px10dp"
        app:cardCornerRadius="@dimen/px10dp"
        app:cardElevation="@dimen/px2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_live_foreshow_photo"
                android:layout_width="@dimen/px560dp"
                android:layout_height="@dimen/px280dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/circle_place_holder_246"/>


            <TextView
                android:id="@+id/item_live_foreshow_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_live_foreshow_photo"
                android:layout_below="@+id/item_live_foreshow_photo"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/px20dp"
                android:ellipsize="end"
                android:maxEms="8"
                android:maxLines="1"
                android:textSize="@dimen/textSize_m"
                tools:text="如何吸粉，人气过万不是梦人气过万不是梦人气过万不是梦"/>


            <TextView
                android:id="@+id/item_live_foreshow_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_live_foreshow_photo"
                android:layout_below="@+id/item_live_foreshow_title"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/px20dp"
                android:textSize="@dimen/textSize_s"
                tools:text="免费"/>

            <TextView
                android:id="@+id/item_live_foreshow_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_live_foreshow_price"
                android:layout_alignBottom="@+id/item_live_foreshow_price"
                android:layout_alignStart="@+id/item_live_foreshow_title"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/textSize_s"
                tools:text="10000000报名"/>

            <View
                android:layout_width="@dimen/px50dp"
                android:layout_height="1px"
                android:layout_above="@id/item_live_foreshow_count"
                android:layout_alignLeft="@id/item_live_foreshow_count"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:background="@color/color_e5e5e5"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

