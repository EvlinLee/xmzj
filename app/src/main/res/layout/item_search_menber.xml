<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/item_click_bg">

    <ImageView
        android:id="@+id/iv_menber_head"
        android:layout_width="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_10"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_height="50dp"
        tools:src="@drawable/live_head_icom_temp"/>

    <TextView
        android:id="@+id/tv_search_userName"
        android:layout_marginLeft="@dimen/margin_10"
        app:layout_constraintLeft_toRightOf="@id/iv_menber_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_menber_head"
        android:layout_toRightOf="@id/iv_menber_head"
        tools:text="财神大咖"/>

    <TextView
        android:id="@+id/tv_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_search_userName"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_menber_head"
        app:layout_constraintLeft_toRightOf="@id/iv_menber_head"
        android:layout_marginLeft="@dimen/margin_10"
        tools:text="一个风趣幽默，气宇不凡的创业者"/>
    <View style="@style/item_line"

        android:layout_below="@id/tv_introduction"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>