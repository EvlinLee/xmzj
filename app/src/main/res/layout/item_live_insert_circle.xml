<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/px120dp"
            android:layout_height="@dimen/px120dp"
            android:layout_marginRight="@dimen/margin_middle"
            android:scaleType="centerCrop"
            android:src="@drawable/live_host_defaual_bg"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_icon"
            android:singleLine="true"
            android:layout_marginRight="@dimen/px20dp"
            android:textSize="@dimen/textSize_ml"
            android:textColor="@color/text_color_333"
            android:text="空城旧梦七分醒"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_toRightOf="@id/img_icon"
            android:layout_toLeftOf="@id/btn_join"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/margin_tiny"
            android:singleLine="true"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_666"
            android:text="空城旧梦七分醒空城旧梦七分醒空城旧梦七分醒"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_toRightOf="@id/img_icon"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/margin_tiny"
            android:maxLines="2"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_999"
            android:text="id:190"/>

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_id"
            android:layout_alignBaseline="@id/tv_id"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_999"
            android:text="帖子231  关注149.9万"/>

    </RelativeLayout>

    <View style="@style/item_line"/>

</LinearLayout>