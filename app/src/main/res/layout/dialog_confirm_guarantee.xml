<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/deal_page_icon_tc_bg"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_large"
        android:background="@color/white"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m"
        android:text="你将给用户木子李发出交易邀请你将给用户木子李发出交易邀请"/>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/margin_middle"
        android:paddingBottom="@dimen/margin_middle"
        android:background="@drawable/shape_guarantee_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_ml"
        android:text="@string/guarantee_confirm_send"/>

    <ImageView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_larger"
        android:src="@drawable/deal_guarantee_page_icon_cha"/>

</LinearLayout>