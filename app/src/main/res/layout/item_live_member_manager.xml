<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/module_divide_line"
        android:padding="@dimen/margin_middle"
        android:paddingLeft="@dimen/margin_10"
        android:text="课程管理"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_type">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px90dp"
            android:layout_height="@dimen/px90dp"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle"
            android:src="@drawable/person_icon_head_120"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_toRightOf="@id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:text="新媒之家"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:text="创建者"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"/>

        <TextView
            android:id="@+id/tv_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/px10dp"
            android:layout_marginRight="@dimen/margin_middle"
            android:textColor="@color/colorAccent"
            android:text="管理"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/iv_head"
            android:background="@color/divide_line"/>
    </RelativeLayout>
</RelativeLayout>