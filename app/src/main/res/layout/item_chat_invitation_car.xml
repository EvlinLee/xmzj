<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:mrl="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/margin_10"
              android:layout_marginRight="@dimen/margin_10"
              android:layout_marginTop="@dimen/margin_10"
              android:background="@color/grey_F4F4F4"
              android:orientation="horizontal">

    <com.gxtc.huchuan.widget.MaterialRippleLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        mrl:mrl_rippleAlpha="0.1"
        mrl:mrl_rippleColor="@color/grey_F4F4F4"
        mrl:mrl_rippleHover="true"
        mrl:mrl_rippleOverlay="true">
        <!--android:background="@drawable/bg_invitation_car"-->

        <LinearLayout
            android:id="@+id/ll_click_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_middle"
                />
            <!--android:src="@mipmap/icon_invitation_teacher"-->
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_middle"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    tools:text="邀请讲师讲课"
                    android:textColor="#ff4d4d4d"
                    android:textSize="@dimen/margin_middle"/>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_middle"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/invitation_lecturer"
                    android:textColor="#ff909499"
                    android:textSize="@dimen/margin_middle"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_middle"
                android:src="@drawable/icon_invitation_instruct"

                />
        </LinearLayout>
    </com.gxtc.huchuan.widget.MaterialRippleLayout>
</LinearLayout>