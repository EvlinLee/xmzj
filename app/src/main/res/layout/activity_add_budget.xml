<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/module_divide_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:padding="@dimen/margin_middle"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_m"
            android:text="现有预算"
            android:textColor="@color/text_color_333"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:textColor="@color/pay_finish"
            android:textSize="@dimen/textSize_m"
            android:text="888"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/module_divide_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:padding="@dimen/margin_middle"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_m"
            android:text="可用余额"
            android:textColor="@color/text_color_333"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                android:text="0.00"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/person_icon_more"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/textSize_m"
                android:text="去充值"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_m"
            android:text="新增预算"
            android:textColor="@color/text_color_333"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="@dimen/px80dp"
            android:background="@android:color/transparent"
            android:hint="请输入预算金额"
            android:textSize="@dimen/textSize_m"
            android:textColorHint="@color/text_color_999"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>

    <Button
        android:id="@+id/btn_article_article"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/btn_blue_selector"
        android:text="正文编辑"
        android:textColor="@color/white" />


</LinearLayout>
