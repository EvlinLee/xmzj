<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_account_water_details_typenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            tools:text="出账金额"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_account_water_details_money"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textSize="26sp"
            tools:text="3.00" />

    </LinearLayout>

    <TextView style="@style/item_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:text="类        型"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_account_water_details_type"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="支出" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:text="时        间"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_account_water_details_time"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="2017-04-20 08:19:16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:text="交易单号"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_account_water_details_odd"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="1047845674778953456284568" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:text="备        注"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_account_water_details_mark"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="提现" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_source_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:text="来       源"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="财神大咖" />
    </LinearLayout>

    <TextView
        style="@style/item_line"
        android:layout_marginTop="@dimen/px40dp" />
</LinearLayout>