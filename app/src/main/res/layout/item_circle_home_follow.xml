<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/px186dp"
    android:layout_height="wrap_content"
    android:clipChildren="false">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/px102dp"
            android:layout_height="@dimen/px102dp"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/px15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/live_list_place_holder_120"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        android:layout_below="@+id/img_head"
        android:layout_centerHorizontal="true"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="新媒之家自家d"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_s"/>

</RelativeLayout>