<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_blacklist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:drawableRight="@drawable/person_icon_more"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="黑名单"
            android:textColor="@color/text_color_333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px20dp"
            android:background="@color/module_divide_line" />

        <TextView
            android:id="@+id/tv_not_see_article"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:drawableRight="@drawable/person_icon_more"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="不看他(她)的文章"
            android:textColor="@color/text_color_333" />

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_not_allow_ses_dynamic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:drawableRight="@drawable/person_icon_more"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="不给他(她)看动态"
            android:textColor="@color/text_color_333" />

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_not_see_somone_dynamic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:drawableRight="@drawable/person_icon_more"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="不看他(她)的动态"
            android:textColor="@color/text_color_333" />
        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_not_see_circle_dynamic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:drawableRight="@drawable/person_icon_more"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="屏蔽圈子的动态"
            android:textColor="@color/text_color_333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px20dp"
            android:background="@color/module_divide_line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="仅好友发信息"
                android:textColor="@color/text_color_333" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_messsge_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View style="@style/item_line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp"
                android:background="@drawable/selector_touch"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="仅好友评论"
                android:textColor="@color/text_color_333" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_messsge_comment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View style="@style/item_line" />

    </LinearLayout>

</LinearLayout>