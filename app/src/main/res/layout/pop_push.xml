<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/push_time"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/px50dp"
        android:layout_marginTop="@dimen/px50dp"
        android:gravity="center"
        android:text="还剩1次推送机会"
        android:textSize="@dimen/textSize_m"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="@dimen/px400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px58dp"
        android:layout_marginRight="@dimen/px58dp"
        android:textColor="@color/text_color_666"
        android:text="给开启通知的粉丝推送新课程开播通知，每天可发送2次，每次时间间隔必须大于4小时，请谨慎使用。"
        android:textSize="@dimen/textSize_s"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/px50dp"
        android:layout_marginLeft="@dimen/px58dp"
        android:layout_marginRight="@dimen/px58dp"
        android:layout_marginTop="@dimen/px50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/px88dp"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_weight="1.0"
            android:background="@drawable/shape_cancel_btn"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"/>

        <Button
            android:id="@id/btn_submit"
            android:layout_width="0dp"

            android:layout_height="@dimen/px88dp"
            android:layout_weight="1.0"
            android:background="@drawable/shape_lanuch_btn"
            android:gravity="center"
            android:text="确定推送"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_m"/>
    </LinearLayout>
</LinearLayout>