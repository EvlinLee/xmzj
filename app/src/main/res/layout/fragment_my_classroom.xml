            android:drawableLeft="@drawable/person_icon_message"
            android:drawablePadding="@dimen/px20dp"
            android:gravity="center_vertical"
            android:text="我的消息"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_appreciation_income"
            style="@style/TextViewMatchStyle"
            android:layout_marginTop="@dimen/px20dp"
            android:background="@color/color_ffffff"
            android:drawableLeft="@drawable/person_icon_red_packet"
            android:drawablePadding="@dimen/px20dp"
            android:gravity="center_vertical"
            android:text="赞赏收益"
            android:textColor="@color/text_color_333"
