        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_distribution_income"
            style="@style/TextViewMatchStyle"
            android:background="@color/color_ffffff"
            android:drawableLeft="@drawable/person_icon_fenxiao"
            android:drawablePadding="@dimen/px20dp"
            android:gravity="center_vertical"
            android:text="分销收益"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_distribution_extension"
            style="@style/TextViewMatchStyle"
            android:layout_marginBottom="@dimen/px60dp"
            android:background="@color/color_ffffff"
            android:drawableLeft="@drawable/person_icon_expand"
            android:drawablePadding="@dimen/px20dp"
            android:gravity="center_vertical"
            android:text="分销推广"
