<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_large"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/live_list_place_holder_120"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_ml"
            tools:text="群聊名字"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            tools:text="70人"/>

    </LinearLayout>

    <View style="@style/item_line"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
        android:text="确认加入群聊"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="250dp"
        android:layout_height="@dimen/px88dp"
        android:layout_marginTop="@dimen/px40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_blue_selector"
        android:text="加入群聊"
        android:textColor="@color/color_ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_middle"
        android:layout_marginEnd="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_large"
        android:lineSpacingExtra="4dp"
        android:textSize="@dimen/textSize_m"
        android:textColor="@color/text_color_999"
        android:text="@string/group_rule"/>

</LinearLayout>
