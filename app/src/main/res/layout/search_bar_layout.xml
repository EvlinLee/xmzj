<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/seach_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cancel_btn"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seach_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_10"
                android:src="@drawable/news_icon_search"/>

            <EditText
                android:id="@+id/seach_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px15dp"
                android:paddingTop="@dimen/px14dp"
                android:paddingBottom="@dimen/px14dp"
                android:paddingEnd="5dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="搜索商品"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/grey1"
                android:textSize="@dimen/textSize_ms"/>
        </LinearLayout>

        <View
            android:id="@+id/item_line"
            style="@style/item_line"
            android:visibility="gone"
            />

        <View
            android:id="@+id/model_line"
            style="@style/model_line"
            android:visibility="gone"
            />
    </LinearLayout>

</FrameLayout>