<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <TextView
        android:id="@+id/label_all_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px54dp"
        android:layout_centerHorizontal="true"
        android:text="总收益"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_xl" />

    <TextView
        android:id="@+id/tv_all_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_all_income"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px40dp"
        android:text="0元"
        android:textColor="@color/color_fa4717" />
    <View
        android:id="@+id/line"
        style="@style/item_line"
        android:layout_below="@id/tv_all_income"
        android:layout_marginTop="@dimen/px50dp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px134dp"
        android:layout_below="@id/line"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_reward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reward"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="打赏"
                android:textColor="@color/text_color_666" />
        </RelativeLayout>

        <View
            style="@style/item_line_vertical"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle" />

        <RelativeLayout
            android:id="@+id/rl_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_class"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="课程"
                android:textColor="@color/text_color_666" />
        </RelativeLayout>

        <View
            style="@style/item_line_vertical"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle" />

        <RelativeLayout
            android:id="@+id/rl_deal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_deal"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="交易"
                android:textColor="@color/text_color_666" />
        </RelativeLayout>

        <View
            style="@style/item_line_vertical"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle" />

        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_circle"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="圈子"
                android:textColor="@color/text_color_666" />
        </RelativeLayout>
        <View
            style="@style/item_line_vertical"
            android:layout_marginBottom="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle" />

        <RelativeLayout
            android:id="@+id/rl_distribute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tx_distribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx_distribute"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="佣金"
                android:textColor="@color/text_color_666" />
        </RelativeLayout>

    </LinearLayout>

 <View
       style="@style/model_line"
       android:visibility="gone"
      android:layout_below="@+id/layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:paddingTop="@dimen/margin_tiny"
        android:paddingBottom="@dimen/margin_tiny"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:textSize="@dimen/textSize_s"
        android:background="@color/module_divide_line"
        android:text="本页显示的是已结算的数据，未结算数据请到订单页查看。"/>
</RelativeLayout>

