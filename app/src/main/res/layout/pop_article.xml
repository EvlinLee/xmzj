<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    android:layout_centerInParent="true"
    android:padding="@dimen/margin_middle"
    android:background="@drawable/shape_whit_bg_radius"
    android:orientation="vertical"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_333"
        android:text="@string/editor_type"/>

    <cn.carbswang.android.numberpickerview.library.NumberPickerView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/picker_position"
        android:layout_width="@dimen/px300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_gravity="center"
        android:contentDescription="test_number_picker_view"
        app:npv_ItemPaddingHorizontal="5dp"
        app:npv_ItemPaddingVertical="@dimen/margin_middle"
        app:npv_DividerColor="@color/colorAccent"
        app:npv_ShowCount="5"
        app:npv_RespondChangeOnDetached="false"
        app:npv_TextColorSelected="@color/colorAccent"
        app:npv_TextColorNormal="@color/text_color_999"
        app:npv_TextSizeNormal="@dimen/textSize_m"
        app:npv_TextSizeSelected="@dimen/textSize_m"
        app:npv_WrapSelectorWheel="true"/>

    <TextView
        android:id="@+id/btn_ts_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textSize_l"
        android:text="发布"/>

</LinearLayout>