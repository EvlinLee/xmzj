<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30dp"
        android:background="@null"
        android:drawableLeft="@drawable/login_shouji"
        android:drawablePadding="@dimen/px20dp"
        android:hint="请输入手机号/新媒号"
        android:padding="@dimen/margin_small"
        android:textColor="@color/text_color_333"
        android:focusable="true"
        android:textSize="@dimen/textSize_m" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/et_count"
        android:background="@color/color_d9d9d9" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_count"
        android:layout_marginTop="@dimen/px30dp"
        android:background="@null"
        android:drawableLeft="@drawable/login_mima"
        android:drawablePadding="@dimen/px20dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="@dimen/margin_small"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/et_password"
        android:background="@color/color_d9d9d9" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginTop="@dimen/px30dp"
        android:background="@drawable/select_btn_login_bg"
        android:enabled="false"
        android:text="登录"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/textSize_l" />

    <TextView
        android:id="@+id/tv_forget_psw"
        style="@style/TextViewMatchStyle"
        android:layout_below="@id/btn_login"
        android:layout_marginBottom="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:layout_weight="1"
        android:gravity="right"
        android:padding="@dimen/margin_tiny"
        android:text="忘记密码？"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_m" />

</RelativeLayout>
