<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    android:clickable="true"
    android:padding="@dimen/margin_middle"
    android:background="@drawable/shape_whit_bg_radius"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_ts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_333"
        android:text="选择类型"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_gravity="center"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="@dimen/margin_middle"
            app:npv_DividerColor="@color/colorAccent"
            app:npv_ShowCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextColorSelected="@color/colorAccent"
            app:npv_TextColorNormal="@color/text_color_999"
            app:npv_TextSizeNormal="@dimen/textSize_m"
            app:npv_TextSizeSelected="@dimen/textSize_m"
            app:npv_WrapSelectorWheel="true"/>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_subType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_gravity="center"
            android:contentDescription="test_number_picker_view"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="@dimen/margin_middle"
            app:npv_DividerColor="@color/colorAccent"
            app:npv_ShowCount="5"
            app:npv_RespondChangeOnDetached="false"
            app:npv_TextColorSelected="@color/colorAccent"
            app:npv_TextColorNormal="@color/text_color_999"
            app:npv_TextSizeNormal="@dimen/textSize_m"
            app:npv_TextSizeSelected="@dimen/textSize_m"
            app:npv_WrapSelectorWheel="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_ts_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textSize_l"
        android:text="确定"/>


</LinearLayout>