<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_efef"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:paddingTop="@dimen/margin_tiny">


        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@drawable/btn_blue_selector"
            android:enabled="false"
            android:paddingBottom="@dimen/margin_tiny"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_tiny"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_l"/>


        <ImageView
            android:id="@+id/img_face"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_send"
            android:padding="@dimen/margin_tiny"
            android:src="@drawable/circle_compile_icon_expression"/>


        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/img_face"
            android:layout_weight="1"
            android:hint="说点什么吧..."
            android:paddingBottom="@dimen/margin_medium"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_ml"
            android:theme="@style/MyEditText"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/layout_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</LinearLayout>

