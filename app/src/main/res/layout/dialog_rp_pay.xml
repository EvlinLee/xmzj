<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/margin_medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_middle"
        android:paddingBottom="@dimen/margin_middle"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="@dimen/px64dp"
            android:layout_height="@dimen/px64dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/_btn_exit"/>

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/px60dp"
            android:layout_height="@dimen/px60dp"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_tiny"
            android:src="@drawable/person_icon_head_120"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_weight="1"
            android:text="请输入密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_xxl"/>

        <TextView
            android:id="@+id/tv_find_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_middle"
            android:gravity="center_vertical"
            android:text="忘记密码"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_m"/>

    </LinearLayout>

    <View style="@style/item_line"/>

    <TextView
        android:id="@+id/tv_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_middle"
        android:text="红包金额"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_xl"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_middle"
        android:text="¥0.00"
        android:textColor="@color/text_color_333"
        android:textSize="28sp"/>

    <View
        style="@style/item_line"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"/>

    <RelativeLayout
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_change"
            android:drawableRight="@drawable/person_icon_more"
            android:drawablePadding="@dimen/margin_small"
            android:text="可用余额"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_my_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_middle"
            android:text="¥0.00"
            android:textSize="@dimen/textSize_m"/>

    </RelativeLayout>

    <View
        style="@style/item_line"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"/>

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_gravity="right"
        android:paddingTop="@dimen/margin_small"
        android:visibility="gone"
        android:text="余额不足，去充值"
        tools:visibility="visible"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium">

        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="number"
            android:background="@color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_line"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dot0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical" />

            <ImageView
                android:id="@+id/img_dot5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/px100dp"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>