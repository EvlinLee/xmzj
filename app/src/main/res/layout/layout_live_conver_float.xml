<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="@dimen/margin_middle"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/px90dp"
            android:layout_height="@dimen/px90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/person_icon_head_120"/>

        <ImageView
            android:id="@+id/img_follow"
            android:layout_width="@dimen/px60dp"
            android:layout_height="@dimen/px60dp"
            android:layout_alignBottom="@id/img_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"
            android:padding="5dp"
            android:src="@drawable/live_icon_add"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_discuss_area"
        android:layout_width="@dimen/px90dp"
        android:layout_height="@dimen/px90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_icon_yuan_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/live_icon_taolun"/>

        <TextView
            android:id="@+id/tv_discuss_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_xs"
            tools:text="1234"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_invite"
        android:layout_width="@dimen/px90dp"
        android:layout_height="@dimen/px90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/live_icon_yuan_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/live_icon_yaoqing"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:text="@string/live_conver_label_invite"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_xs"/>

    </LinearLayout>

</LinearLayout>