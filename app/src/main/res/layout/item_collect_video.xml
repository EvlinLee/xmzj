<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="@dimen/px46dp"
        android:layout_height="@dimen/px46dp"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_head_icon_80"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginTop="@dimen/px22dp"
        android:layout_toRightOf="@id/iv_head_img"
        android:textColor="@color/text_color_666"
        android:textSize="15sp"
        tools:text="没事盼盼"/>

    <TextView
        android:id="@+id/tv_news_collect_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginRight="@dimen/px20dp"
        android:gravity="right"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_s"
        tools:text="21分钟前"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_head_img"
        android:layout_below="@id/iv_head_img"
        android:layout_marginBottom="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_middle">

        <ImageView
            android:id="@+id/img_face"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@color/grey_e5e5"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/conversation_bofang"/>

    </RelativeLayout>

</RelativeLayout>