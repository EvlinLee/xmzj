<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_coustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/px20dp"
        >
        <ImageView
            android:id="@+id/iamge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/px15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shop_icon_kefu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="在线客服"/>
    </LinearLayout>

    <View style="@style/model_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle">

        <TextView
            android:id="@+id/tv_label_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品金额"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_mall_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            android:gravity="end"
            android:layout_toRightOf="@+id/tv_label_price"
            android:layout_marginLeft="@dimen/px30dp"
            tools:text="￥100"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle">

        <TextView
            android:id="@+id/tv_yunfei_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_yunfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            android:gravity="end"
            android:layout_toRightOf="@+id/tv_yunfei_label"
            android:layout_marginLeft="@dimen/px30dp"
          />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_pay_paytype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle">

        <TextView
            android:id="@+id/tv_pay_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            android:gravity="end"
            android:layout_toRightOf="@+id/tv_pay_type_label"
            android:layout_marginLeft="@dimen/px30dp"
            tools:text="微信"/>

    </RelativeLayout>
    <View style="@style/item_line"/>
    <RelativeLayout
        android:id="@+id/rl_paid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle">

        <TextView
            android:id="@+id/tv_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_all_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            android:gravity="end"
            android:layout_toRightOf="@+id/tv_label1"
            android:layout_marginLeft="@dimen/px30dp"
            tools:text="￥90"/>

    </RelativeLayout>
    <View style="@style/model_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/px30dp"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_333"
            android:text="订单编号:"/>
        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="EEDFR124578254452687455747"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/px30dp"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_333"
            android:text="创建时间:"/>
        <TextView
            android:id="@+id/creat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="2017-10-25 18：30：05"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_paytime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/px30dp"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_333"
            android:text="付款时间:"/>
        <TextView
            android:id="@+id/pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="2017-10-25 19：25：05"/>

    </LinearLayout>
    <View style="@style/item_line"/>

</LinearLayout>