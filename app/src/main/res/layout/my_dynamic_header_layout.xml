<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/px10dp"
        android:drawableLeft="@drawable/news_icon_search"
        android:drawablePadding="@dimen/px20dp"
        android:gravity="center_vertical"
        android:hint="搜索动态"
        android:background="@color/white"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/px10dp"
        android:paddingBottom="@dimen/px10dp"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/px10dp"
        android:textColor="@color/text_color_333"
        android:textColorHint="@color/text_color_999"
        android:textSize="@dimen/textSize_l" />

</LinearLayout>
