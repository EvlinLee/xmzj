<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px160dp">

    <CheckBox
        android:id="@+id/cb_circle_topic"
        android:layout_width="@dimen/px60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px10dp"
        android:button="@drawable/selector_news_collect"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_circle_topic_time"
        android:layout_width="@dimen/px100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px20dp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_s"
        tools:text="21分钟前" />

    <ImageView
        android:id="@+id/iv_circle_topic_cover"
        android:layout_width="@dimen/px120dp"
        android:layout_height="@dimen/px120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px10dp"
        android:layout_toRightOf="@id/tv_circle_topic_time"
        android:minHeight="@dimen/px120dp"
        android:minWidth="@dimen/px120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/list_error_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px10dp"
        android:layout_marginRight="@dimen/px70dp"
        android:layout_marginTop="@dimen/px20dp"
        android:layout_toRightOf="@id/iv_circle_topic_cover"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_circle_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/px10dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_l"
            tools:drawableRight="@drawable/circle_compile_icon_picture"
            tools:text="没事盼盼" />

        <ImageView
            android:id="@+id/iv_topic_manager_essence"
            android:layout_width="@dimen/px80dp"
            android:layout_height="@dimen/px40dp"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_toRightOf="@id/tv_circle_topic_title"
            android:gravity="center_vertical"
            android:src="@drawable/circle_home_icon_essence"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_circle_topic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px35dp"
        android:layout_marginLeft="@dimen/px10dp"
        android:layout_marginRight="@dimen/px10dp"
        android:layout_toLeftOf="@id/cb_circle_topic"
        android:layout_toRightOf="@id/iv_circle_topic_cover"
        android:lines="1"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m"
        tools:text="我用我的心，去看去感觉，就算是执迷，让我执迷不悔" />

<TextView
   style="@style/item_line"
    android:layout_alignParentBottom="true"
    />
</RelativeLayout>