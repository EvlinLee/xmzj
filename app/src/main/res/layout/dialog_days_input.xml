<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/px10dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义时间"
        android:gravity="center"
        android:layout_marginBottom="@dimen/px30dp"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true"
            android:padding="@dimen/px20dp"
            android:hint="请输入整数"
            android:background="@drawable/shap_login_bg"
            android:textSize="@dimen/textSize_m"
            android:gravity="left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:gravity="center"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_marginBottom="@dimen/px30dp"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />
    </LinearLayout>


    <View
        style="@style/item_line"
        />
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/px20dp"
            android:paddingBottom="@dimen/px20dp"
            android:text="@string/label_cancel"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divide_line"
            />
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/px20dp"
            android:paddingBottom="@dimen/px20dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />
    </LinearLayout>

</LinearLayout>