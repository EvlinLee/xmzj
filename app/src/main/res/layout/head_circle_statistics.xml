<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_middle"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_day_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="日收入"
                android:textColor="#EA2A00"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_day_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="14200.00"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_income_with_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="7天收入"
                android:textColor="#EA2A00"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tx_income_with_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="23121"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_income_with_mouth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="30天收入"
                android:textColor="#EA2A00"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tx_income_with_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="255"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_all_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="总收入"
                android:textColor="#EA2A00"
                android:textSize="@dimen/textSize_m"/>


            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10086"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/item_line"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_middle">

        <LinearLayout
            android:id="@+id/pay_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="付费人数"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_pay_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="256"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/free_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="免费人数"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_free_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="25"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pent_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="每日佣金"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_day_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="25"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/active_user_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_middle"
                android:layout_marginRight="@dimen/margin_middle"
                android:layout_marginTop="@dimen/margin_middle"
                android:text="活跃用户"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_day_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="25"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/model_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_home_day_visit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日访主页"
                android:textSize="@dimen/textSize_m"
                android:textColor="@color/text_color_333"/>

            <TextView
                android:id="@+id/tv_home_day_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                tools:text="120"
                android:textSize="@dimen/textSize_s"
                android:textColor="@color/text_color_666"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_home_month_visit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月访主页"
                android:textSize="@dimen/textSize_m"
                android:textColor="@color/text_color_333"/>

            <TextView
                android:id="@+id/tv_home_month_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                tools:text="123"
                android:textSize="@dimen/textSize_s"
                android:textColor="@color/text_color_666"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_intro_day_visit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日访介绍页"
                android:textSize="@dimen/textSize_m"
                android:textColor="@color/text_color_333"/>

            <TextView
                android:id="@+id/tv_intro_day_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                tools:text="099"
                android:textSize="@dimen/textSize_s"
                android:textColor="@color/text_color_666"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_intro_month_visit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月访介绍页"
                android:textSize="@dimen/textSize_m"
                android:textColor="@color/text_color_333"/>

            <TextView
                android:id="@+id/tv_intro_month_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                tools:text="315"
                android:textSize="@dimen/textSize_s"
                android:textColor="@color/text_color_666"/>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/model_line"/>

