<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    android:background="@drawable/bg_all_orderlist"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_small">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_time"
            android:text="店铺：新媒旗舰店"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="已发货"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_toLeftOf="@+id/tv_status"
            android:text="2018-4-11 10:39"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mall_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <View
        style="@style/item_line"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_middle"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_status"
            android:layout_alignTop="@+id/tv_time"
            android:layout_below="@+id/tv_status"
            android:layout_gravity="right"
            android:text="合计：100"
            android:textColor="@color/guarantee_orange"
            android:textSize="@dimen/textSize_ms" />

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_status"
            android:layout_alignTop="@+id/tv_time"
            android:layout_below="@+id/tv_status"
            android:layout_gravity="left"
            android:text="订单号：126465465113165321"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_ms" />

        <!--<TextView
            android:id="@+id/anothe_order"
