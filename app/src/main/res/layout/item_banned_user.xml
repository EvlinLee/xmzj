<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px160dp">

    <com.gxtc.huchuan.widget.RoundImageView
        android:id="@+id/riv_banned_user"
        android:layout_width="@dimen/px120dp"
        android:layout_height="@dimen/px120dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px20dp"
        android:minWidth="@dimen/px120dp"
        android:minHeight="@dimen/px120dp"
        android:src="@drawable/list_error_img" />

    <TextView
        android:id="@+id/tv_banned_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_toRightOf="@id/riv_banned_user"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="李子明" />

    <TextView
        android:id="@+id/tv_cancel_banned"
        android:layout_width="@dimen/px160dp"
        android:layout_height="@dimen/px60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px20dp"
        android:background="@drawable/shape_bullue_btn_normal"
        android:gravity="center"
        android:textColor="@color/btn_nornal"
        android:textSize="@dimen/textSize_m" />
</RelativeLayout>