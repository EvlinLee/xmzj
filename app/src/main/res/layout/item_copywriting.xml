<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/view4"
        android:background="@color/module_divide_line"/>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/view5"
        android:background="@color/divide_line"/>

    <TextView
        android:id="@+id/tv_pd_tuiguang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@id/view6"
        android:text="待推广"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_pd_tuiguang"
        android:background="@color/divide_line" />


    <TextView
        android:id="@+id/tv_pd_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view1"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_10"
        android:text="已审核"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m" />

    <TextView
        android:id="@+id/tv_pd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_pd_state"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toLeftOf="@id/tv_pd_state"
        android:maxLines="1"
        android:text="教你如何撩妹文案推广"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />


    <TextView
        android:id="@+id/tv_pd_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_pd_title"
        android:layout_below="@id/tv_pd_title"
        android:layout_marginTop="@dimen/margin_10"
        android:text="2017-02-20至2017-02-21   08:00至23:59"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_pd_time"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/divide_line" />


    <!--扇形内容区域-->
    <include
        android:id="@+id/layout_pd"
        layout="@layout/model_pd_content" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/layout_pd"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/shape_pd_btn_bg"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_small"
            android:textSize="@dimen/textSize_s"
            android:text="取消推广" />

        <TextView
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/shape_pd_btn_bg"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_small"
            android:textSize="@dimen/textSize_s"
            android:text="增加预算" />

        <TextView
            android:id="@+id/btn_updata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/shape_pd_btn_bg"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_small"
            android:textSize="@dimen/textSize_s"
            android:text="修改文案" />

        <TextView
            android:id="@+id/btn_xiugai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@drawable/shape_pd_btn_bg"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_small"
            android:textSize="@dimen/textSize_s"
            android:text="修改设置" />

    </LinearLayout>


</RelativeLayout>