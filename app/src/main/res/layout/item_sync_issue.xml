<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px120dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px118dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sync_issue_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="6"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_ml"
            tools:text="交际圈" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示在圈子首页"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_999"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <CheckBox
            android:id="@+id/cb_sync_issue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView style="@style/item_line" />

</LinearLayout>