<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F5"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20dp"
        android:background="@color/module_divide_line"/>

    <TextView
        android:id="@+id/tv_invite_admintor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_touch"
        android:drawableRight="@drawable/person_icon_more"
        android:foreground="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp"
        android:text="邀请管理员"
        android:textColor="@color/text_color_333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20dp"
        android:background="@color/module_divide_line"/>
    <TextView
        android:id="@+id/tv_invite_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_touch"
        android:drawableRight="@drawable/person_icon_more"
        android:foreground="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp"
        android:text="邀请好友"
        android:textColor="@color/text_color_333"/>
</LinearLayout>