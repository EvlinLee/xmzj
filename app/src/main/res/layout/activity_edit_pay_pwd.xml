<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_change_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/px54dp"
        android:paddingTop="@dimen/px240dp"
        android:text="请输入支付密码，以认证身份"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
        tools:visibility="visible"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        >

        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_line"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dot0"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical"/>

            <ImageView
                android:id="@+id/img_dot1"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical"/>

            <ImageView
                android:id="@+id/img_dot2"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical"/>

            <ImageView
                android:id="@+id/img_dot3"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical"/>

            <ImageView
                android:id="@+id/img_dot4"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

            <View style="@style/item_line_vertical"/>

            <ImageView
                android:id="@+id/img_dot5"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/shape_conversation_discuss_icon"
                android:visibility="invisible"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_reset_py_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_gravity="right"
        android:text="忘记密码"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/no_set_pay_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/px100dp"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
        android:visibility="gone"
        tools:text="请设置支付密码，用于支付认证"
        tools:visibility="visible"/>


</LinearLayout>