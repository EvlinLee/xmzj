<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/selector_touch"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/px24dp"
            android:paddingTop="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="设置背景"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <ImageView
                android:id="@+id/iv_next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>

            <ImageView
                android:id="@+id/iv_live_intro_setting_head"
                android:layout_width="@dimen/px134dp"
                android:layout_height="@dimen/px90dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next1"
                android:src="@drawable/person_icon_head"/>


        </RelativeLayout>

        <include layout="@layout/layout_live_intro_module_space"/>


        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_subtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/selector_touch"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:id="@+id/tv_label_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="主题名称"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <ImageView
                android:id="@+id/iv_next3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px16dp"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@id/iv_next3"
                android:layout_toRightOf="@id/tv_label_3"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="闪客快打"/>


        </RelativeLayout>

        <View style="@style/item_line"/>

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_intro_starttime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/selector_touch"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="开始时间"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_intro_starttime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next4"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="2017-06-30 10:32"/>

            <ImageView
                android:id="@+id/iv_next4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>
        </RelativeLayout>

        <View style="@style/item_line"/>

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_intro_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:visibility="gone"
            tools:visibility="visible">

            <View style="@style/item_line" android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/px24dp"
                android:text="设置价格"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_intro_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next7"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="10.0"/>

            <ImageView
                android:id="@+id/iv_next7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/px24dp"
                android:src="@drawable/person_icon_more"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_divided_proportion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/selector_touch">

            <View style="@style/item_line" android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/tv_label_divided_proportion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/px24dp"
                android:text="分成比例"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_divided_proportion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toEndOf="@id/tv_label_divided_proportion"
                android:layout_toStartOf="@+id/iv_next12"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:hint="(1~100)"
                android:lines="1"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"/>

            <ImageView
                android:id="@+id/iv_next12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px24dp"
                android:src="@drawable/person_icon_more"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_intro_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:visibility="gone"
            tools:visibility="visible">

            <View style="@style/item_line" android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/px24dp"
                android:text="设置密码"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_intro_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next8"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="124lsdfjio"/>

            <ImageView
                android:id="@+id/iv_next8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/px24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>

        </RelativeLayout>

        <include layout="@layout/layout_live_intro_module_space"/>


        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_mainspeaker_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/selector_touch"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:id="@+id/tv_label_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="填写主讲人"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_mainspeaker_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px16dp"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next5"
                android:layout_toRightOf="@id/tv_label_5"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="闪客快打闪客快打闪客快打闪客快打闪客快打闪客快打"/>

            <ImageView
                android:id="@+id/iv_next5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>
        </RelativeLayout>

        <View style="@style/item_line"/>

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_mainspeaker_intro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/selector_touch"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:id="@+id/tv_label_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="主讲人介绍"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_mainspeaker_intro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px16dp"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next6"
                android:layout_toRightOf="@id/tv_label_6"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="闪客快打"
                />

            <ImageView
                android:id="@+id/iv_next6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>
        </RelativeLayout>

        <View style="@style/item_line"/>

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_live_intro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/selector_touch"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:id="@+id/tv_live_desc_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="课程概要"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_live_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toEndOf="@id/tv_live_desc_label"
                android:layout_toStartOf="@+id/iv_next2"
                android:ellipsize="end"
                android:gravity="center_vertical|end"
                android:lines="1"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="闪客快打"/>

            <ImageView
                android:id="@+id/iv_next2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_series"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:visibility="gone"
            android:layout_marginRight="@dimen/px24dp"
            android:background="@drawable/selector_touch"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:id="@+id/tv_live_series_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="系列课分类"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_live_intro_setting_series"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toEndOf="@id/tv_live_series_label"
                android:layout_toStartOf="@+id/iv_next9"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:lines="1"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="这是一个很好的系列课"/>

            <ImageView
                android:id="@+id/iv_next9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_F4F4F4"
            android:paddingBottom="@dimen/px24dp"
            android:paddingLeft="@dimen/px24dp"
            android:paddingTop="@dimen/margin_10"
            android:textSize="@dimen/textSize_xs"
            android:text="修改以上内容需通过审核后才能生效"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="分享榜"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                />


            <CheckBox
                android:id="@+id/cb_live_intro_setting_sharelist"
                style="@style/ToggleCommentCheckBoxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px10dp"
                android:layout_toLeftOf="@id/iv_next5"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_F4F4F4"
            android:paddingBottom="@dimen/px24dp"
            android:paddingLeft="@dimen/px24dp"
            android:paddingTop="@dimen/margin_10"
            android:textSize="@dimen/textSize_xs"
            android:text="开启后，将在课程首页显示所有分享过课程的用户"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="显示报名用户统计"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                />


            <CheckBox
                android:id="@+id/cb_live_intro_setting_singup"
                style="@style/ToggleCommentCheckBoxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px10dp"
                android:layout_toLeftOf="@id/iv_next5"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_F4F4F4"
            android:paddingBottom="@dimen/px24dp"
            android:paddingLeft="@dimen/px24dp"
            android:paddingTop="@dimen/margin_10"
            android:textSize="@dimen/textSize_xs"
            android:text="将在课程首页统计显示所有报名用户"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginRight="@dimen/px24dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="介绍页"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                />


            <CheckBox
                android:id="@+id/cb_live_intro_setting_intro"
                style="@style/ToggleCommentCheckBoxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px10dp"
                android:layout_toLeftOf="@id/iv_next5"
                />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_F4F4F4"
            android:paddingBottom="@dimen/px400dp"
            android:paddingLeft="@dimen/px24dp"
            android:paddingTop="@dimen/margin_10"
            />
        <!--android:text="开启后，新用户需先经过介绍页面才能到达直播间"-->

    </LinearLayout>
</ScrollView>