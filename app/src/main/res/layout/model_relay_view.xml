<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    tools:visibility="visible">
   
    <LinearLayout
        android:id="@+id/linear_lauout_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_F4F4F4"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/px80dp"
            android:layout_height="@dimen/px80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/live_list_place_holder_120"/>

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="好友可见。0：所有人可见；1、好友可见"/>

    </LinearLayout>

</FrameLayout>
