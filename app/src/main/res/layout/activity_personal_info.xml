<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:orientation="vertical">

    <View
        style="@style/model_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="@dimen/px24dp">

        <ImageView
            android:id="@+id/iv_img_head"
            android:layout_width="@dimen/px120dp"
            android:layout_height="@dimen/px120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_head_icon_120"/>
        <ImageView
            android:id="@+id/pic_ver_status"
            android:layout_width="@dimen/px30dp"
            android:layout_height="@dimen/px30dp"
            android:scaleType="centerCrop"
            android:layout_alignEnd="@+id/iv_img_head"
            android:layout_alignBottom="@+id/iv_img_head"
          />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24dp"
            android:layout_toRightOf="@id/iv_img_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/px20dp"
                android:drawableRight="@drawable/person_homepage_icon_nv"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                android:visibility="invisible"
                tools:text="ALing"/>

            <TextView
                android:id="@+id/usercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px5dp"
                android:textSize="@dimen/textSize_s"
                tools:text="111777"/>
            <TextView
                android:id="@+id/tv_nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px5dp"
                android:textSize="@dimen/textSize_s"
                tools:text="昵称:ALing"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_blue_btn_normal"
            android:paddingBottom="@dimen/margin_tiny"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_tiny"
            android:text="关注"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_m"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/margin_tiny"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_tiny"
            android:text="修改"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"
            android:visibility="gone"
            tools:visibility="visible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/set_remark_and_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_marginTop="@dimen/px20dp"
        android:background="@color/color_ffffff"
        android:drawableRight="@drawable/icon_qrcode"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp"
        android:text="二维码名片"
        android:textColor="@color/text_color_333"/>

    <RelativeLayout
        android:id="@+id/rl_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginLeft="@dimen/px168dp"
            android:drawableRight="@drawable/person_icon_more"
            android:gravity="left|center_vertical"
            android:text="描述"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/label_des"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px100dp"
            android:gravity="center"
            android:text="描述"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20dp"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp">

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px100dp"
            android:layout_marginLeft="@dimen/px168dp"
            android:gravity="center"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="广州"/>

        <TextView
            android:id="@+id/label_area"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px100dp"
            android:gravity="center"
            android:text="地区"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            />

        <View
            android:id="@+id/line1"
            style="@style/item_line"
            android:layout_below="@id/tv_area"/>

        <LinearLayout
            android:id="@+id/layout_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_intro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px100dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="个性签名"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>


            <TextView
                android:id="@+id/tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px100dp"
                android:layout_marginLeft="@dimen/px49dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                tools:text=""/>

        </LinearLayout>

        <View
            android:id="@+id/line2"
            style="@style/item_line"
            android:layout_below="@id/layout_intro"/>

        <RelativeLayout
            android:id="@+id/rl_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_intro"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px180dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px24dp"
                android:src="@drawable/person_icon_more"
                />

            <com.gxtc.huchuan.widget.OtherGridView
                android:id="@+id/grid_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/px30dp"
                android:layout_marginLeft="@dimen/px168dp"
                android:layout_marginTop="@dimen/px30dp"
                android:layout_toLeftOf="@id/iv_more"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="个人动态"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>
        </RelativeLayout>

        <View
            android:id="@+id/line3"
            style="@style/item_line"
            android:layout_below="@id/rl_album"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88dp"
        android:layout_marginLeft="@dimen/margin_larger"
        android:layout_marginRight="@dimen/margin_larger"
        android:layout_marginTop="@dimen/px40dp"
        android:background="@drawable/btn_blue_selector"
        android:text="发消息"
        android:textColor="@color/color_ffffff"/>

    <Button
        android:id="@+id/btn_apply_guarantee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88dp"
        android:layout_marginLeft="@dimen/margin_larger"
        android:layout_marginRight="@dimen/margin_larger"
        android:layout_marginTop="@dimen/margin_middle"
        android:background="@drawable/shape_btn_white"
        android:text="@string/guarantee_btn"
        android:textColor="@color/text_color_666"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>