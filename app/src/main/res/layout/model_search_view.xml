<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_search_area"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <EditText
        android:id="@+id/et_input_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/px14dp"
        android:paddingBottom="@dimen/px14dp"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:hint="搜索"
        android:maxLines="1"
        android:background="@drawable/shape_pd_btn_bg"
        android:textColor="@color/text_color_333"
        android:textColorHint="@color/text_color_999"
        android:textSize="@dimen/textSize_m"/>

</RelativeLayout>