<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px100dp"
    android:paddingRight="@dimen/px100dp"
    android:paddingTop="@dimen/margin_middle"
    android:paddingBottom="@dimen/margin_middle">

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
        tools:text="课堂标题"/>

    <TextView
        android:id="@+id/start_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_ms"
        tools:text="这里是开课时间"/>


    <TextView
        android:id="@+id/tv_see_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:clickable="true"
        android:text="查看介绍页"
        android:textColor="#ff568cc3"
        android:textSize="@dimen/textSize_ms"/>

</LinearLayout>