<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp"
        android:paddingTop="@dimen/px20dp"
        android:text="更换手机后，下次登录可以使用新手机号登录."
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_m"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingBottom="@dimen/px40dp"
        android:textSize="@dimen/textSize_m"
        android:textColor="@color/text_color_666"
        tools:text="当前手机号17301673845"/>

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_blacklist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:drawableRight="@drawable/person_icon_more"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="国家/地区     中国"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>

        <View
            style="@style/item_line"
            android:layout_marginLeft="@dimen/px24dp"
            android:layout_marginRight="@dimen/px24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:background="@drawable/selector_touch"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="+86"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divide_line"/>

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="4"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:singleLine="true"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"/>

</LinearLayout>