<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_small">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/live_list_place_holder_120"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_head"
                android:layout_marginStart="@dimen/margin_middle"
                android:maxLines="2"
                android:textSize="@dimen/textSize_m"
                android:textColor="@color/text_color_333"
                tools:text="nangua"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_alignBottom="@id/img_head"
                android:layout_toEndOf="@id/img_head"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize_s"
                android:textColor="@color/text_color_999"
                tools:text="2017-08-02"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_small"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_l"
            tools:text="这是一条标题"/>

        <View style="@style/item_line"  />

        <TextView
            android:id="@+id/tv_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_middle"
            android:layout_gravity="end"
            android:drawableRight="@drawable/person_icon_more"
            android:drawablePadding="@dimen/margin_small"
            android:text="查看详情"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_999"/>

    </LinearLayout>

</android.support.v7.widget.CardView>