<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px130dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_item_new_after_new_circle_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg"/>

    <TextView
        android:id="@+id/tv_new_after_new_circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_new_after_new_circle_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px20dp"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_s"
        tools:text="那些年吃过的屎"/>

    <LinearLayout
        android:id="@+id/ll_item_new_after_new_headbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#45000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_new_after_new_circle_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_m"
            tools:text="那些年吃过的屎"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:text="——————————"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_new_after_new_issue_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px4dp"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_m"
            tools:text="课程: 168"/>
    </LinearLayout>

