<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.gxtc.huchuan.widget.RoundImageView
        android:id="@+id/head_pic"
        android:layout_width="@dimen/px120dp"
        android:layout_height="@dimen/px120dp"
        android:layout_margin="@dimen/margin_10"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"/>
    <LinearLayout
        android:layout_toRightOf="@+id/head_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_pic"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="天语"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="动态量"
            android:gravity="center"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评论量"
            android:layout_toLeftOf="@+id/text_time"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/head_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/head_pic"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/conten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="今天天气真好"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/dynamic_count"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:gravity="center"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="77"
            android:gravity="center"
            android:layout_toLeftOf="@+id/text_time"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />

    </LinearLayout>
    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>