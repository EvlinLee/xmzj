<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px520dp">

    <TextView
        android:id="@+id/tv_news_ads1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginRight="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:maxLines="2"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
        tools:text="我用我的心，去看去感觉，就算是执迷，让我执迷不悔" />


    <LinearLayout
        android:id="@+id/ll_news_ads1_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_ads1_property"
            android:layout_width="@dimen/px50dp"
            android:layout_height="@dimen/px40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:src="@drawable/news_icon_advertisement" />

        <!--<com.gxtc.huchuan.widget.RoundImageView-->
        <!--android:id="@+id/iv_news_video_sourceicon"-->
        <!--android:layout_width="@dimen/px30dp"-->
        <!--android:layout_height="@dimen/px30dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_marginLeft="@dimen/px20dp"-->
        <!--android:src="@drawable/news_icon_head_logo" />-->

        <TextView
            android:id="@+id/tv_news_ads1_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            tools:text="作者" />


        <TextView
            android:id="@+id/tv_news_ads1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            tools:text="21分钟前" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_news_ads1_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px360dp"
        android:layout_above="@id/ll_news_ads1_bottom"
        android:layout_below="@id/tv_news_ads1_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginRight="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:scaleType="centerCrop" />

    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>