<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_deal_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/search_head_view"
        android:visibility="gone" />

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cb_deal_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px360dp"
        android:background="@drawable/list_error_img"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120dp"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginRight="@dimen/px20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_deal_head_fbtz"
            android:layout_width="0dp"
            android:layout_height="@dimen/px60dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/shape_deal_head_btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="@dimen/px5dp"
                 android:src="@drawable/deal_homepage_icon_fbtz" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px5dp"
                android:text="发布帖子"
                android:textSize="@dimen/textSize_s" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deal_head_wdtz"
            android:layout_width="0dp"
            android:layout_height="@dimen/px60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_deal_head_btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px5dp"
                android:src="@drawable/deal_homepage_icon_wdtz" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px5dp"
                android:text="我的帖子"
                android:textSize="@dimen/textSize_s" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deal_head_jygl"
            android:layout_width="0dp"
            android:layout_height="@dimen/px60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_deal_head_btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px5dp"
                android:src="@drawable/deal_homepage_icon_jygl" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px5dp"
                android:text="交易管理"
                android:textSize="@dimen/textSize_s" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deal_head_jyhh"
            android:layout_width="0dp"
            android:layout_height="@dimen/px60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_deal_head_btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px5dp"
                android:src="@drawable/deal_homepage_icon_jyhh" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px5dp"
                android:text="交易会话"
                android:textSize="@dimen/textSize_s" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:focusable="true" />

    <View style="@style/model_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_middle">

        <FrameLayout
            android:id="@+id/layout_danbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/danbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/deal_home_icon_sqdb"
                android:drawablePadding="@dimen/margin_tiny"
                android:text="申请担保"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_ms"/>

        </FrameLayout>

        <View
            style="@style/item_line_vertical"
            android:layout_marginLeft="10dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/deal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_tiny"
                android:gravity="center_vertical"
                android:text="交易笔数:233"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_ms"/>

        </FrameLayout>

        <View
            style="@style/item_line_vertical"
            android:layout_marginRight="5dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_info_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_tiny"
                android:gravity="center_vertical"
                android:text="帖子数量:366"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_ms"/>

        </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <com.gxtc.commlibrary.widget.MyRadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone" />


    <View style="@style/model_line"/>

    <RadioGroup
        android:id="@+id/radiogroup_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/deal_radio_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_group_selector"
            android:button="@color/transparent"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="全部"

            android:textColor="@color/color_radiobutton" />

        <View
            android:id="@+id/radio_line1"
            android:layout_width="2px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:background="@color/black"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/deal_radio_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_group_selector"
            android:button="@color/transparent"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="出售"
            android:textColor="@color/color_radiobutton" />

        <View
            android:id="@+id/radio_line2"
            android:layout_width="2px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:background="@color/black" />

        <RadioButton
            android:id="@+id/deal_radio_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_group_selector"
            android:button="@color/transparent"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="求购"
            android:textColor="@color/color_radiobutton" />
    </RadioGroup>


</LinearLayout>