<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingTop="@dimen/px20dp"
    android:paddingBottom="@dimen/px20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginRight="@dimen/px20dp">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px90dp"
            android:layout_height="@dimen/px90dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="@dimen/px24dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有声的紫禁城"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_333"
            android:layout_alignTop="@id/iv_head"
            android:layout_toRightOf="@id/iv_head"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_m"
            android:text="1234466575"
            android:textColor="@color/text_color_999"
            android:layout_below="@id/tv_title"
            android:layout_toRightOf="@id/iv_head"
            android:layout_alignBottom="@id/iv_head"
            android:gravity="center_vertical"/>

    </RelativeLayout>
    <View
        style="@style/item_line"
        android:layout_marginTop="@dimen/px20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/px20dp"
        android:paddingTop="@dimen/px20dp">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="实付：1.0元"
            android:gravity="right"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="购买时间："
            android:textSize="@dimen/textSize_s"
            android:gravity="right"
            />
    </LinearLayout>


</LinearLayout>