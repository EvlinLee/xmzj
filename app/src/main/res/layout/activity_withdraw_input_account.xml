<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F4F4F4"
    android:orientation="vertical"
 >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle"
        android:text="请绑定本人的帐号"
        android:textColor="@color/text_color_999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_label"
                android:text="用户名称"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_name_label"
                android:layout_margin="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_sign"
                android:background="@null"
                android:hint="请输入用户实名"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/textSize_ml" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_account_label"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_label"
                android:text="支付宝帐号"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_account_label"
                android:layout_margin="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_sign"
                android:background="@null"
                android:hint="请输入帐号"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/textSize_ml" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_live_intro_module_space" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_middle"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_middle"
        android:background="@drawable/btn_blue_selector"
        android:text="确定"
        android:textColor="@color/white" />


</LinearLayout>