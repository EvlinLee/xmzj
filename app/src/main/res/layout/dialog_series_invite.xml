<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_radiu"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_medium"
    android:paddingEnd="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_large"
    android:paddingBottom="@dimen/margin_large">


    <ImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/px90dp"
        android:layout_height="@dimen/px90dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/person_icon_head_120"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:textSize="@dimen/textSize_m"
        tools:text="讲师开启了邀请免费听课功能，需邀请10位好友参与才能解锁后面课程"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:textSize="@dimen/textSize_l"
        tools:text="你已邀请2位， 还差9位"/>


    <LinearLayout
        android:id="@+id/layout_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:orientation="horizontal"/>


    <TextView
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_middle"
        android:background="@drawable/select_btn_login_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="去邀请"/>

</LinearLayout>