<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.gxtc.huchuan.widget.CircleImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/px120dp"
        android:layout_height="@dimen/px120dp"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/live_class_icon_temp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_tiny"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintLeft_toRightOf="@id/image_head"
        app:layout_constraintTop_toTopOf="@id/image_head"
        tools:text="老实任发" />

    <TextView
        android:id="@+id/usercode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_head"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_tiny"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/image_head"
        tools:text="新媒号：111333" />

    <TextView
        android:id="@+id/circle_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_head"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="免费" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:singleLine="true"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/circle_status"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="来源:app" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_head"
        tools:text="加入时间:2017/10/13/" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>