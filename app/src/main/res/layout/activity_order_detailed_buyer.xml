<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_order_detailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:visibility="invisible"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_refund"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_e05050"
            android:text="取消退款"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_s"/>

        <Button
            android:id="@+id/btn_refund"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/green_pts_color"
            android:text="申请退款"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_s"/>


        <Button
            android:id="@+id/btn_article_article"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/btn_nornal"
            android:text="交易完成"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_s"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_bg"
                android:padding="@dimen/margin_middle"
                android:visibility="gone"
                tools:visibility="visible">

                <RelativeLayout
                    android:id="@+id/layout_daojishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待支付"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_m"/>

                    <TextView
                        android:id="@+id/tv_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/tv_hint"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_toRightOf="@id/tv_hint"
                        android:text="剩余时间: "
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_s"/>

                    <TextView
                        android:id="@+id/tv_hint_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_hint"
                        android:layout_marginTop="@dimen/margin_tiny"
                        android:text="30分钟内未支付，系统将自动取消订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_s"/>

                    <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_border_raido_white"
                        android:padding="@dimen/margin_tiny"
                        android:text="取消订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_s"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/deal_indent_icon_gou"
                    android:drawablePadding="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:text="交易完成"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_m"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_deal_icon1"
                    android:layout_width="@dimen/px80dp"
                    android:layout_height="@dimen/px80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/deal_confirm_icon_normal"/>

                <ImageView
                    android:id="@+id/img_deal_line1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/deal_icon_quotes"/>

                <ImageView
                    android:id="@+id/img_deal_icon2"
                    android:layout_width="@dimen/px80dp"
                    android:layout_height="@dimen/px80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/deal_pay"/>

                <ImageView
                    android:id="@+id/img_deal_line2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/deal_icon_quotes"/>

                <ImageView
                    android:id="@+id/img_deal_icon3"
                    android:layout_width="@dimen/px80dp"
                    android:layout_height="@dimen/px80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/deal_maijia_normal"/>

                <ImageView
                    android:id="@+id/img_deal_line3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/deal_icon_quotes"/>

                <ImageView
                    android:id="@+id/img_deal_icon4"
                    android:layout_width="@dimen/px80dp"
                    android:layout_height="@dimen/px80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/deal_icon_finish"/>


            </LinearLayout>

            <LinearLayout
