<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/item_click_bg"
    android:orientation="vertical">

    <View style="@style/model_line" />

    <include layout="@layout/model_circle_home_item_head" />

    <TextView
        android:id="@+id/tv_circle_home_two_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginTop="@dimen/px15dp"
        android:text="愿你行走万里，归来仍是少年。"
        android:textColor="@color/text_color_333"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px340dp"
        android:layout_marginTop="@dimen/px15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_circle_home_two_content1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginRight="@dimen/px5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
      />

        <ImageView
            android:id="@+id/iv_circle_home_two_content2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px5dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
           />
    </LinearLayout>

    <include layout="@layout/model_circle_home_item_foot" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20dp"
        android:background="@color/module_divide_line" />
</LinearLayout>