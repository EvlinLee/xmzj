<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/item_click_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/px46dp"
        android:layout_height="@dimen/px46dp"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_icon_head"/>

    <TextView

        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginTop="@dimen/px22dp"
        android:layout_toRightOf="@id/iv_head"
        android:textColor="@color/text_color_666"
        android:textSize="15sp"
        tools:text="没事盼盼"/>
    <TextView
        android:id="@+id/tv_news_collect_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignBaseline="@+id/tv_username"
        android:layout_marginRight="@dimen/px20dp"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_s"
        android:visibility="gone"
        tools:text="21分钟前" />
    <View
        android:id="@+id/v_collect_custom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:layout_below="@id/iv_head"
        android:layout_marginLeft="@dimen/px30dp"
        android:layout_marginRight="@dimen/px30dp"
        android:layout_marginTop="@dimen/px24dp"
        android:background="@color/divide_line"/>




<LinearLayout
    android:layout_below="@id/v_collect_custom_line"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:id="@+id/tv_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:textColor="@color/text_color_333"
        tools:text="biaoti"/>

    <TextView
        android:id="@+id/tv_custom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:maxLines="3"/>

    <ImageView
        android:id="@+id/iv_custom_img"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_medium"
        android:scaleType="fitCenter"/>

</LinearLayout>

</RelativeLayout>