<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_collect_property"
            android:layout_width="@dimen/px50dp"
            android:layout_height="@dimen/px50dp"
            android:layout_marginLeft="@dimen/px20dp"
            android:src="@drawable/person_icon_head"/>

        <TextView
            android:id="@+id/tv_news_collect_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20dp"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            tools:text="作者"/>

        <TextView
            android:id="@+id/tv_news_collect_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20dp"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            tools:text="评论"/>

        <TextView
            android:id="@+id/tv_news_collect_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20dp"
            android:gravity="right"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            tools:text="21分钟前"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_collect_cover"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginStart="@dimen/px20dp"
            android:layout_marginEnd="@dimen/px20dp"
            android:layout_marginTop="@dimen/margin_middle"
            android:layout_marginBottom="@dimen/margin_middle"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <CheckBox
                android:id="@+id/cb_news_collect"
                android:layout_width="@dimen/px60dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:button="@drawable/selector_news_collect"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_news_collect_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/px20dp"
                android:layout_marginTop="@dimen/margin_middle"
                android:layout_toRightOf="@id/cb_news_collect"
                android:lines="2"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                tools:text="我用我的心，去看去感觉，就算是执迷，让我执迷不悔"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>