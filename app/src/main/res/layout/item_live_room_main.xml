<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#fff2f2f2"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_topic"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px96dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/sv_logo"
            android:layout_width="@dimen/px4dp"
            android:layout_height="@dimen/px4dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_middle"
        />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="150.0dip"
                android:text="阿斯打扫阿斯达大厦大苏打苏打水打扫打扫打扫打扫打扫打扫打扫打扫的的"
                android:textColor="#ff323333"
                android:textSize="@dimen/textSize_s"/>

            <ImageView
                android:id="@+id/iv_v_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:paddingRight="@dimen/px4dp"
                android:src="@drawable/v_mark_icon"/>

            <ImageView
                android:id="@+id/iv_teacher_mark"
                android:layout_width="@dimen/px40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/px40dp"
                android:paddingLeft="@dimen/px4dp"
                android:paddingRight="@dimen/px4dp"
                android:src="@drawable/icon_t_mark"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_change_live_room"
            android:layout_width="@dimen/px126dp"
            android:layout_height="@dimen/px64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_middle"
            android:background="@drawable/change_live_room_bg"
            android:gravity="center"
            android:text="切换课堂"
            android:textColor="#ff2f8fe6"
            android:textSize="@dimen/textSize_xs"/>
    </LinearLayout>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px118dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.gxtc.huchuan.widget.MaterialRippleLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            fresco:mrl_rippleAlpha="0.1"
            fresco:mrl_rippleColor="@color/grey1"
            fresco:mrl_rippleHover="true"
            fresco:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/ll_fans_num_area"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#ff2f8fe6"
                    android:textSize="@dimen/textSize_m"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/live_list_user"
                    android:drawablePadding="@dimen/margin_tiny"
                    android:text="所有粉丝数"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/textSize_s"/>
            </LinearLayout>
        </com.gxtc.huchuan.widget.MaterialRippleLayout>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/px40dp"
            android:background="@color/grey1"/>

        <com.gxtc.huchuan.widget.MaterialRippleLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            fresco:mrl_rippleAlpha="0.1"
            fresco:mrl_rippleColor="@color/grey1"
            fresco:mrl_rippleHover="true"
            fresco:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/ll_yesterday_profit_area"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_yesterday_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#ff2f8fe6"
                    android:textSize="@dimen/textSize_m"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_reward_money"
                    android:drawablePadding="@dimen/margin_tiny"
                    android:text="昨日课堂收益"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/textSize_s"/>
            </LinearLayout>
        </com.gxtc.huchuan.widget.MaterialRippleLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <com.gxtc.huchuan.widget.MaterialRippleLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_weight="1.0"
            fresco:mrl_rippleAlpha="0.1"
            fresco:mrl_rippleColor="@color/grey1"
            fresco:mrl_rippleHover="true"
            fresco:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/tv_new_live_room_area"
                android:layout_width="@dimen/px320dp"
                android:layout_height="@dimen/px76dp"
                android:background="@drawable/live_room_new_topic_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新建课堂"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/textSize_m"/>
            </LinearLayout>
        </com.gxtc.huchuan.widget.MaterialRippleLayout>

        <com.gxtc.huchuan.widget.MaterialRippleLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_weight="1.0"
            fresco:mrl_rippleAlpha="0.1"
            fresco:mrl_rippleColor="@color/grey1"
            fresco:mrl_rippleHover="true"
            fresco:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/llNewChannel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px76dp"
                android:background="@drawable/live_room_new_channel_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_10"
                    android:text="新建系列课"
                    android:textColor="#ff2f8fe6"
                    android:textSize="@dimen/textSize_m"/>
            </LinearLayout>
        </com.gxtc.huchuan.widget.MaterialRippleLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/grey_F4F4F4"/>
</LinearLayout>