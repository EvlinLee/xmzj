<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_marginTop="@dimen/margin_middle">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_head_icon_80"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/img_head"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                tools:text="nangua"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_l"
            tools:text="这是一条标题"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_toEndOf="@id/tv1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="商品名称"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="@dimen/margin_tiny"
                android:text="订单状态："
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv2"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_toEndOf="@id/tv2"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="卖家已支付"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="@dimen/margin_tiny"
                android:text="订单时间："
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv3"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_toEndOf="@id/tv3"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="2017-08-01"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:layout_marginTop="@dimen/margin_tiny"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="订单编号："
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv4"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_toEndOf="@id/tv4"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"
                tools:text="123812781647861238123980123"/>

        </RelativeLayout>

        <View style="@style/item_line"/>

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_middle"
            android:drawablePadding="@dimen/margin_small"
            android:drawableRight="@drawable/person_icon_more"
            android:text="查看详情"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"/>

    </LinearLayout>

</android.support.v7.widget.CardView>