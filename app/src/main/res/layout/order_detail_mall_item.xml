<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_live_room_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/px20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"/>


    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_live_room_image"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_toEndOf="@+id/item_live_room_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="第二季第3期 过敏体质"/>


    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/item_title"
        android:layout_below="@+id/item_title"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_toEndOf="@+id/item_live_room_image"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/textSize_s"
        tools:text="陈伟健康说-健康说频道"/>


    <LinearLayout
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_live_room_image"
        android:layout_marginRight="@dimen/px24dp"
        android:layout_toEndOf="@+id/item_live_room_image"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:text="￥148"
            android:textColor="@color/color_fa4717"
            android:textSize="@dimen/textSize_s"/>

        <TextView
            android:id="@+id/item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:gravity="end"
            android:text="x1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_s"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line"/>

</RelativeLayout>