<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F4F4F4"
    android:orientation="vertical"
    tools:context="com.gxtc.huchuan.ui.deal.liuliang.takeOrder.TakeSettingActivity">

    <RelativeLayout
        android:id="@+id/btn_ts_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_middle"
        android:background="@color/white"
        android:foreground="?android:selectableItemBackground"
        android:padding="@dimen/margin_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ts_position"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_ts_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="请选择"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_ts_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/white"
        android:foreground="?android:selectableItemBackground"
        android:padding="@dimen/margin_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ts_time"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_ts_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="请选择"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s" />

    </RelativeLayout>


    <TextView
        android:id="@+id/btn_ts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_middle"
        android:background="@drawable/btn_blue_selector_no_stroke"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_middle"
        android:text="@string/ts_shengcheng"
        android:textSize="@dimen/textSize_l"
        android:textColor="@color/white" />

</LinearLayout>
