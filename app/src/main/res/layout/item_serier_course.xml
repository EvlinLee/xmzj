<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/selector_touch"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <!--系列课网格布局要改成课程的那种布局-->

    <ImageView
        android:id="@+id/iv_serier_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px330dp"
        android:layout_gravity="fill_vertical"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_serier_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginTop="@dimen/px12dp"
            android:lines="1"
            android:layout_marginRight="@dimen/px10dp"
            android:textSize="@dimen/textSize_s"
            tool:text="价格" />

        <TextView
            android:id="@+id/tv_serier_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginTop="@dimen/px12dp"
            android:layout_marginEnd="@dimen/margin_middle"
            android:layout_toStartOf="@id/tv_serier_price"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_m"
            tool:text="百家讲坛：女性生理健康和两性知识" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_serier_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginTop="@dimen/px12dp"
            android:lines="1"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            tool:text="10010人购买" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginTop="@dimen/px12dp"
            android:lines="1"
            android:layout_marginRight="@dimen/px10dp"
            android:textSize="@dimen/textSize_s"
            android:text="管理 " />
    </RelativeLayout>
</LinearLayout>