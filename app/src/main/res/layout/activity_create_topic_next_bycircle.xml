<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/px48dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="@dimen/px600dp"
    android:layout_height="@dimen/px720dp">
    <TextView
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_gravity="center"
        android:text="圈子课堂"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/divide_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_intro"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/color_ffffff"
        android:lineSpacingExtra="@dimen/px8dp"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp"
        android:text="介绍页说明\n1.创建后进入编辑介绍页，填写介绍页\n2.详细的介绍课堂内容可以帮你更快积累粉丝数。"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />
</LinearLayout>





        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_finish"
            android:layout_width="@dimen/px430dp"
            android:layout_height="@dimen/px88dp"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/px48dp"
            android:background="@drawable/btn_blue_selector_no_stroke"
            android:text="完成"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/textSize_l" />
    </LinearLayout>
</ScrollView>