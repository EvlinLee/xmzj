<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_share_make_money_cover"
        android:layout_width="0dp"
        android:layout_height="@dimen/px150dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginRight="@dimen/px20dp"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_tiny"
                android:background="@drawable/shape_circle_main_btn_bg"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="系列课"
                android:textColor="@color/circle_main_Btn_fabiao"
                android:textSize="@dimen/textSize_xs"/>

            <TextView
                android:id="@+id/tv_share_make_money_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px20dp"
                android:layout_toRightOf="@id/cb_news_collect"
                android:drawablePadding="@dimen/px10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"
                tools:text="我用我的心，去看去感觉，就算是执迷，让我执迷不悔让我执迷不悔让我执迷不悔" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_share_make_money_groupdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_s"
                tools:text="三线的花66666" />

            <LinearLayout
                android:id="@+id/layout_share_make_money_miaosu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_share_make_money_groupdesc"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_share_make_money_miaosu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10dp"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/px20dp"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_s"
                    tools:text="帖子6888" />

                <TextView
                    android:id="@+id/tv_share_make_money_renci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10dp"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_s"
                    tools:text="关注1688" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_share_make_money_miaosu"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/px10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=" 佣金"
                    android:textColor="#FC4A21"
                    android:textSize="@dimen/textSize_s" />

                <TextView
                    android:id="@+id/tv_share_make_money_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FC4A21"
                    android:textSize="@dimen/textSize_m"
                    tools:text="68.00 /" />

                <TextView
                    android:id="@+id/tv_share_money_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/textSize_s"
                    tools:text="¥688 " />


            </LinearLayout>

            <TextView
                android:id="@+id/btn_share_make_money_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/layout_share_make_money_miaosu"
                android:layout_marginBottom="@dimen/px20dp"
                android:layout_marginRight="@dimen/px20dp"
                android:background="@drawable/shape_lanuch_btn"
                android:drawableLeft="@drawable/news_share_money_icon_bg"
                android:drawablePadding="@dimen/margin_tiny"
                android:paddingBottom="@dimen/px10dp"
                android:paddingLeft="@dimen/px20dp"
                android:paddingRight="@dimen/px20dp"
                android:paddingTop="@dimen/px10dp"
                android:text="马上分享"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_s" />

        </RelativeLayout>

        <View style="@style/item_line" />
    </LinearLayout>


</LinearLayout>