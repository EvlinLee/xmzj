<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_live_room_image"
            android:layout_width="@dimen/px150dp"
            android:layout_height="@dimen/px150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />


        <TextView
            android:id="@+id/item_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_live_room_image"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_tiny"
            android:maxLines="2"
            android:layout_toEndOf="@+id/item_live_room_image"
            android:ellipsize="end"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="第二季第3期 过敏体质" />
        <TextView
            android:id="@+id/source_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goods_title"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_above="@+id/textView"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_toEndOf="@+id/item_live_room_image"
            android:paddingBottom="@dimen/px10dp"
            android:gravity="bottom"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_s"
            android:text="899" />


        <LinearLayout
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_live_room_image"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginRight="@dimen/px24dp"
            android:layout_toEndOf="@+id/item_live_room_image"
            android:gravity="bottom"
            android:paddingBottom="@dimen/px5dp">


            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="￥9.9"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_s" />
            <ImageView
                android:id="@+id/text_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_icon_gouwuche"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView style="@style/model_line" />
</LinearLayout>