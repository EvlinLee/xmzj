<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_small"
        android:text="出售一个商城网站"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_xl" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle">

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/deal_forum_icon_eye"
            android:drawablePadding="@dimen/margin_tiny"
            android:text="23"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:drawableLeft="@drawable/deal_forum_icon_comment"
            android:drawablePadding="@dimen/margin_tiny"
            android:text="23"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:text="公众号交易"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_middle"
        android:layout_marginTop="@dimen/px20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/px80dp"
            android:layout_height="@dimen/px80dp"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:src="@drawable/person_icon_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_head"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="芒果"
                    android:textColor="@color/text_color_333" />

                <TextView
                    android:id="@+id/tv_money_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="预期价格:"
                    android:textColor="@color/text_color_999" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/px20dp"
                    android:text="￥10000"
                    android:textColor="@color/color_e05050" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_toRightOf="@id/img_head"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1小时"
                    android:textColor="@color/text_color_999" />

                <TextView
                    android:id="@+id/tv_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="剩余数量:"
                    android:textColor="@color/text_color_999" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/px20dp"
                    android:textColor="@color/colorAccent"
                    tools:text="10000" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <View style="@style/item_line" />

    <LinearLayout
        android:id="@+id/layout_parame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle">

    </LinearLayout>

    <View style="@style/item_line" />

    <View style="@style/model_line" />

    <View style="@style/item_line" />

    <!--<LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_middle"
        android:orientation="vertical">

    </LinearLayout>-->

    <com.gxtc.huchuan.widget.ExpandVideoPlayer
        android:id="@+id/ep_goods_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400dp"
        android:visibility="gone"
        tools:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="150dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_middle">

        <WebView
            android:id="@id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </FrameLayout>

    <View style="@style/model_line" />

    <ImageView
        android:id="@+id/tv_goods_protect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_middle"
        android:src="@drawable/trance_one" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_middle"
        android:scrollbars="none">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trance_two" />
    </HorizontalScrollView>

    <View style="@style/model_line" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_danbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person_icon_deal"
            android:drawablePadding="@dimen/margin_tiny"
            android:text="担保交易"
            android:textColor="#89BC5F"
            android:textSize="@dimen/textSize_m"
            android:visibility="invisible" />

        <!--<TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            tools:text="浏览341"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_toLeftOf="@id/tv_read"
            android:layout_toRightOf="@id/tv_danbao"
            android:orientation="horizontal"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:paddingBottom="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_middle"
            android:text="留言"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/coustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_middle"
            android:background="@drawable/shape_blue_btn_normal"
            android:drawableLeft="@drawable/goods_details_service"
            android:drawablePadding="@dimen/margin_tiny"
            android:paddingBottom="@dimen/margin_tiny"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_tiny"
            android:text="客服"
            android:textColor="@color/btn_nornal"
            android:textSize="@dimen/textSize_s" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_no_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View style="@style/item_line" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/empty_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_middle"
            android:text="暂时没有留言" />

    </LinearLayout>

</LinearLayout>