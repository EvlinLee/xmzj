<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <include layout="@layout/model_collect_circle_item_head"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px130dp"
        android:layout_marginTop="@dimen/px20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_circle_home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m"
            tools:text="昨天"/>

        <TextView
            android:id="@+id/tv_circle_home_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:clickable="true"
            android:text="删除"
            android:textColor="@color/color_676980"
            android:textSize="@dimen/textSize_m"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:clickable="true"
            android:padding="@dimen/margin_tiny"
            android:src="@drawable/circle_friend_comment_icon_blie"/>
    </LinearLayout>


    <include
        layout="@layout/model_circle_home_item_footv2"
        android:visibility="gone"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/px30dp"/>

</LinearLayout>