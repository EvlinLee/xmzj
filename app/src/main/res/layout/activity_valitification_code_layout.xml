<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px50dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:background="@drawable/selector_touch"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="手机号"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"/>

            <EditText
                android:id="@+id/input_phone_num"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="4"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:singleLine="true"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>

        </LinearLayout>

        <View
            style="@style/item_line"
            android:layout_marginLeft="@dimen/px24dp"
            android:layout_marginRight="@dimen/px24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="1"
                android:background="@drawable/selector_touch"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:text="密码"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_m"/>

            <EditText
                android:id="@+id/et_val_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/px100dp"
                android:layout_weight="4"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="请输入密码"
                android:paddingLeft="@dimen/px24dp"
                android:paddingRight="@dimen/px24dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_larger"
        android:background="@drawable/select_btn_blue"
        android:textSize="@dimen/textSize_l"
        android:textColor="@color/white"
        android:text="确认"/>

</LinearLayout>