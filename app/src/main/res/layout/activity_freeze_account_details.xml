    <TextView
        android:id="@+id/tv_freeze_account_details_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px160dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_ml"
        android:textStyle="bold"
        tools:text="文案[撩妹大师]增加预算冻结500元"/>

    <TextView style="@style/item_line"/>

    <TextView
        style="@style/item_line"
        android:layout_marginTop="@dimen/px20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/px20dp"
        android:paddingTop="@dimen/margin_medium">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="订单类型"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_freeze_account_details_deal_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="冻结"/>
    </LinearLayout>

    <TextView style="@style/item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/px20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="付款用户"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="755404"/>
    </LinearLayout>

    <TextView style="@style/item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/px20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="交易单号"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_freeze_account_details_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="755404"/>
    </LinearLayout>

    <TextView style="@style/item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/px20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="创建时间"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_freeze_account_details_create_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:text="2017-03-23 10:33:22"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>
    </LinearLayout>

    <TextView style="@style/item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/px20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="平台服务费"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_freeze_account_flat_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:text="￥4"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/px20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="账号余额"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_freeze_account_details_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="168.10"/>
    </LinearLayout>

    <TextView style="@style/item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingLeft="@dimen/px20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="可用余额"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m"/>

        <TextView
            android:id="@+id/tv_freeze_account_details_canuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_weight="4"
            android:gravity="right"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            tools:text="16.10"/>
    </LinearLayout>

</LinearLayout>