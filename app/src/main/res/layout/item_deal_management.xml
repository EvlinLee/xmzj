<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px24dp"
    android:layout_marginBottom="@dimen/px24dp"
    android:layout_marginLeft="@dimen/margin_middle"
    android:layout_marginRight="@dimen/margin_middle">
        <CheckBox
            android:id="@+id/cb_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:background="@drawable/selector_news_collect"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-15 23:30"
            android:textSize="@dimen/textSize_s"
            android:textColor="@color/text_color_999"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="出售出售出售出售出售出售出售出售出售出售出售出售出售出售出售出售"
            android:textSize="@dimen/textSize_m"
            android:textColor="@color/text_color_333"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="@dimen/px10dp"
            android:layout_toLeftOf="@id/cb_deal"
            android:layout_marginRight="@dimen/margin_middle"
            />


</RelativeLayout>