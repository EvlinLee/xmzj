<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_flow_list">
    <LinearLayout
        android:id="@+id/ll_edit_classify"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/px24dp"
            android:layout_height="@dimen/px24dp"
            android:clickable="true"
            android:layout_marginLeft="@dimen/px24dp"
            android:src="@drawable/person_live_backstage_classify_compile"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/px28dp"
            android:paddingRight="@dimen/px300dp"
            android:clickable="true"
            android:text="@string/label_edit"
            android:textColor="@color/text_color_333"
            android:textSize="13sp"/>
    </LinearLayout>
    <View
        style="@style/item_line"/>
    <LinearLayout
        android:id="@+id/ll_del_classify"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_bubble"
            android:layout_width="@dimen/px24dp"
            android:layout_height="@dimen/px24dp"
            android:clickable="true"
            android:layout_marginLeft="@dimen/px24dp"
            android:src="@drawable/person_live_backstage_classify_compile_delete"/>

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/px28dp"
            android:paddingRight="@dimen/px300dp"
            android:clickable="true"
            android:text="@string/label_del"
            android:textColor="@color/text_color_333"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>