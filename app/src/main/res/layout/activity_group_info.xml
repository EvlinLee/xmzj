<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.gxtc.huchuan.widget.MyGridView
            android:id="@+id/chat_menber_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:focusable="true"
            android:gravity="center"
            android:horizontalSpacing="@dimen/px30dp"
            android:numColumns="5"
            android:paddingBottom="@dimen/margin_middle"
            android:paddingLeft="@dimen/px30dp"
            android:paddingRight="@dimen/px30dp"
            android:paddingTop="@dimen/margin_middle"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/px46dp" />

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_all_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_middle"
            android:text="查看全部成员"
            android:visibility="gone"
            tools:visibility="visible" />

        <View style="@style/item_line" />

        <RelativeLayout
            android:id="@+id/tv_group_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@color/color_ffffff"
            android:foreground="?android:selectableItemBackground"
            android:paddingLeft="@dimen/px24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="群聊头像"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <ImageView
                android:id="@+id/iv_group_avatar"
                android:layout_width="@dimen/px50dp"
                android:layout_height="@dimen/px50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next1"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon_head" />

            <ImageView
                android:id="@+id/iv_next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px24dp"
                android:src="@drawable/person_icon_more" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            style="@style/item_line" />

        <RelativeLayout
            android:id="@+id/tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@color/color_ffffff"
            android:foreground="?android:selectableItemBackground"
            android:paddingLeft="@dimen/px24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="群聊名称"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px100dp"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/label"
                android:drawablePadding="@dimen/px10dp"
                android:drawableRight="@drawable/person_icon_more"
                android:gravity="center_vertical|right"
                android:padding="@dimen/margin_middle"
                android:singleLine="true"
                android:textColor="@color/text_color_333"
                tools:text="哈哈哈" />
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            style="@style/item_line" />

        <RelativeLayout
            android:id="@+id/tv_group_qr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@color/color_ffffff"
            android:foreground="?android:selectableItemBackground"
            android:paddingLeft="@dimen/px24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="群二维码"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <ImageView
                android:layout_width="@dimen/px50dp"
                android:layout_height="@dimen/px50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next2"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_qrcode" />

            <ImageView
                android:id="@+id/iv_next2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px24dp"
                android:src="@drawable/person_icon_more" />
        </RelativeLayout>

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_invate_friends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@color/color_ffffff"
            android:drawableRight="@drawable/person_icon_more"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_middle"
            android:text="邀请好友进群"
            android:textColor="@color/text_color_333" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:layout_marginTop="@dimen/margin_middle"
            android:background="@color/color_ffffff"
            android:padding="@dimen/margin_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="消息免打扰"
                android:textColor="@color/text_color_333" />

            <Switch
                android:id="@+id/sw_message_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tv_clear_conversation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@color/color_ffffff"
            android:drawableRight="@drawable/person_icon_more"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_middle"
            android:text="清除聊天记录"
            android:textColor="@color/text_color_333" />

        <View style="@style/item_line" />


        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@color/color_ffffff"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_middle"
            android:text="退出群聊"
            android:textColor="@color/text_color_333" />

    </LinearLayout>
</ScrollView>