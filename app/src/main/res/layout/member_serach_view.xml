<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px10dp"
        android:background="@drawable/shape_cancel_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:src="@drawable/navigation_icon_back"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_input_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/news_icon_search"
            android:drawablePadding="@dimen/px20dp"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:background="@null"
            android:padding="@dimen/px10dp"
            android:paddingBottom="@dimen/px10dp"
            android:paddingLeft="@dimen/margin_middle"
            android:paddingRight="@dimen/margin_middle"
            android:paddingTop="@dimen/px10dp"
            android:textColor="@color/text_color_333"
            android:textColorHint="@color/text_color_999"
            android:textSize="@dimen/textSize_l"
            >
        </EditText>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/textSize_m"
            android:clickable="true"
            android:padding="@dimen/margin_tiny"
            android:text="取消"
            android:textColor="@color/btn_nornal"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/bar"
        style="@style/item_line"/>

</RelativeLayout>


