<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_middle">
    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_m"
        android:layout_centerVertical="true"
        android:text="1."/>
    <ImageView
        android:id="@+id/riv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_rank"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_icon_head"/>
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/riv_logo"
        android:textSize="@dimen/textSize_m"
        android:layout_centerVertical="true"
        android:textColor="@color/bar_grey"
        android:text="笑笑"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_invite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_ms"
            android:text="邀请：58"/>
        <TextView
            android:id="@+id/tv_invite_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_ms"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_fa4717"
            android:text="佣金：￥888.88"/>
      </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_content"
        style="@style/item_line" />

</RelativeLayout>