<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_create_nofree_circle"
            android:layout_width="@dimen/px246dp"
            android:layout_height="@dimen/px246dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_create_nofree_name"
                android:layout_width="@dimen/px246dp"
                android:layout_height="@dimen/px246dp"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_place_holder_246" />

            <ImageView
                android:id="@+id/iv_create_nofree_circle_selectimg"
                android:layout_width="@dimen/px50dp"
                android:layout_height="@dimen/px50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px10dp"
                android:layout_marginTop="@dimen/px10dp"
                android:src="@drawable/circle_create_pay_icon_camera" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_create_nofree_circle_name"
            android:layout_width="@dimen/px246dp"
            android:layout_height="@dimen/px100dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:hint="圈子名字"
            android:maxLength="10"
            android:textColor="@color/text_color_999"
            android:textColorHint="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="@dimen/px20dp"-->
        <!--android:text="设置付费机制"-->
        <!--android:textColor="@color/text_color_333"-->
        <!--android:textSize="@dimen/textSize_l" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px100dp"
            android:layout_marginRight="@dimen/px100dp">

            <TextView
                android:id="@+id/tv_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="¥"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <TextView
                android:id="@+id/tv_nian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="/年"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <EditText
                android:id="@+id/et_create_nofree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_nian"
                android:layout_toRightOf="@id/tv_qian"
                android:gravity="center"
                android:hint="请输入金额"
                android:inputType="number|numberDecimal"
                android:maxLength="13"
                android:textColor="@color/text_color_999"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/textSize_m"
                android:theme="@style/MyEditText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px100dp"
            android:layout_marginRight="@dimen/px100dp">

            <TextView
                android:id="@+id/tv_yong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="%"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/et_fenxiao"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_yong"
                android:gravity="center"
                android:hint="分成比例"
                android:inputType="number"
                android:maxLength="13"
                android:textColor="@color/text_color_999"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/textSize_m"
                android:theme="@style/MyEditText" />

        </RelativeLayout>
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="@dimen/px20dp"-->
        <!--android:text="填写圈子简介"-->
        <!--android:textColor="@color/text_color_333"-->
        <!--android:textSize="@dimen/textSize_l" />-->

        <EditText
            android:id="@+id/et_create_nofree_circle_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_marginTop="@dimen/px20dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="圈子简介(选填 150字以内，长按可进行复制粘贴等操作)"
            android:maxLength="150"
            android:padding="@dimen/px20dp"
            android:textColor="@color/text_color_999"
            android:textColorHint="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginLeft="@dimen/px40dp"
            android:layout_marginRight="@dimen/px40dp"
            android:layout_marginTop="@dimen/px30dp"
            android:text="圈子创建成功之后可前往圈子设置界面对圈子进行详细介绍或修改圈子设置，如设置分销比例修改年费等。"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_m" />
    </LinearLayout>
</ScrollView>