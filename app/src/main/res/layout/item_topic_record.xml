    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="店铺：新媒旗舰店"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="已发货"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_toLeftOf="@+id/tv_status"
            android:text="2018-4-11 10:39"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

    </RelativeLayout>

    <View
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/bg_dotted_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_middle">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/px110dp"
            android:layout_height="@dimen/px110dp"
            android:layout_marginEnd="@dimen/margin_middle"
            android:scaleType="centerCrop"
            android:src="@drawable/live_list_place_holder_120" />

        <LinearLayout
            android:id="@+id/layout_parame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/margin_middle"
            android:layout_marginTop="2dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="398.00"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/textSize_s" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_head"
            android:layout_toStartOf="@id/layout_parame"
            android:maxLines="2"
            android:text="动态ip移动注册卡,"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_m" />

       <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toEndOf="@id/img_head"
           android:layout_alignBottom="@+id/img_head"
           android:gravity="bottom"
            android:text="电话卡"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_ms" />

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_middle"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingRight="@dimen/margin_middle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_status"
            android:layout_alignTop="@+id/tv_time"
            android:layout_below="@+id/tv_status"
            android:layout_gravity="right"
            android:textColor="@color/guarantee_orange"
            android:textSize="@dimen/textSize_ms"
            android:text="合计：100"/>

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_status"
            android:layout_alignTop="@+id/tv_time"
            android:layout_below="@+id/tv_status"
            android:layout_gravity="left"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_ms"
            android:text="订单号：126465465113165321"/>

    </FrameLayout>


</LinearLayout>