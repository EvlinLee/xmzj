<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_series_owner_intro"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/px170dp"
        android:layout_height="@dimen/px120dp"
        android:layout_margin="@dimen/margin_10"
        android:scaleType="centerCrop"
        android:src="@drawable/live_list_place_holder_120" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_head"
        android:layout_toEndOf="@id/iv_head"
        android:layout_toRightOf="@id/iv_head"
        android:layout_toStartOf="@+id/tv_more"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m"
        tools:text="lsdjkg" />


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_head"
        android:layout_toRightOf="@id/iv_head"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_10"
        android:textSize="@dimen/textSize_xs"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/circle_main_Btn_fabiao"
        android:background="@drawable/shape_circle_main_btn_bg"
        tools:text="系列课" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_head"
        android:layout_toRightOf="@id/tv_type"
        android:gravity="center"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_s"
        tools:text="价格：￥9900" />
     <View
         android:layout_alignParentBottom="true"
        style="@style/item_line"/>
</RelativeLayout>

