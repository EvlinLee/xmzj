<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="410dp"
    android:background="@drawable/open_rp_bg">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/open_rp_close"/>


    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_icon_head"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_pin"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/color_FFDCA8"
        android:textSize="14sp"
        tools:text="刘洪林"/>


    <TextView
        android:id="@+id/tv_send_rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="发了一个红包"
        android:textColor="@color/color_FFDCA8"
        android:textSize="14sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_no_rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/color_FFDCA8"
        android:textSize="14sp"
        android:text="给你发了一个红包"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_rp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_FFDCA8"
        android:textSize="@dimen/textSize_xxl"
        android:visibility="gone"
        tools:text="恭喜发财,大吉大利"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_open_rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/open_rp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_look_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_open_rp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/person_icon_more_white"
        android:text="看看大家的手气"
        android:textColor="@color/color_FFDCA8"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>











