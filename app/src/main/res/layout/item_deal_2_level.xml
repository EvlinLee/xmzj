<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_middle"
        android:layout_alignParentRight="true"
        android:src="@drawable/select_btn_blue"/>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_status"
        android:layout_marginRight="@dimen/margin_small"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle">

            <!--<ImageView
                android:id="@+id/img_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/deal_icon_top"/>-->


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:text="[出售]"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_s"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="官方代购，代售权3以上高质量文档网站"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_status" />

            <!--android:layout_alignBaseline="@id/tv_status"-->

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_below="@id/layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_ads1_property"
            android:layout_width="@dimen/px50dp"
            android:layout_height="@dimen/px40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:src="@drawable/news_icon_advertisement"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/px50dp"
            android:layout_height="@dimen/px50dp"
            android:layout_marginLeft="@dimen/margin_middle"
            android:src="@drawable/person_icon_head"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="8"
            android:text="空城旧梦空城旧梦空城旧梦"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/textSize_xs"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="网站"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_s"
            android:visibility="gone"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/tv_liuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="12留言"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_xs"/>

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 122浏览"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_xs"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_weight="1"
            android:gravity="right"
            android:text="15分钟前"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_xs"/>

    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_below="@id/layout1"
        android:layout_marginTop="@dimen/margin_middle"/>

</RelativeLayout>