<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gxtc.huchuan.ui.mine.setting.MessageSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="接收新消息通知"
            android:textColor="@color/text_color_333"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_sound_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_middle"/>

    </RelativeLayout>

    <View style="@style/item_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="会话消息提示"
            android:textColor="@color/text_color_333"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_middle"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        style="@style/item_line"
       />

    <RelativeLayout
        android:id="@+id/set_meaber_massage_layou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/px24dp"
            android:text="仅好友发信息"
            android:textColor="@color/text_color_333" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_messsge_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View style="@style/item_line" />
    <TextView
        android:id="@+id/tv_clear_conversation_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:background="@drawable/selector_touch"
        android:drawableRight="@drawable/person_icon_more"
        android:foreground="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px24dp"
        android:paddingRight="@dimen/px24dp"
        android:text="清除聊天记录"
        android:textColor="@color/text_color_333"/>
    <View
        android:id="@+id/line2"
        style="@style/item_line" />
</LinearLayout>
