<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_news_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px20dp"
        android:layout_marginRight="@dimen/px20dp"
        android:layout_marginTop="@dimen/px20dp"
        android:maxLines="2"
        android:textColor="@color/text_color_333"
        android:textSize="15sp"
        tools:text="我用我的心，去看去感觉，就算是执迷，让我执迷不悔"/>


    <com.gxtc.huchuan.widget.ExpandVideoPlayer
        android:id="@+id/play_news_video_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px360dp"
        android:layout_marginEnd="@dimen/px20dp"
        android:layout_marginStart="@dimen/px20dp"
        android:layout_marginTop="@dimen/margin_middle"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/ll_news_video_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_video_property"
            android:layout_width="@dimen/px50dp"
            android:layout_height="@dimen/px40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_news_video_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_news_video_property"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_xs"
            tools:text="作者"/>

        <TextView
            android:id="@+id/tv_news_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_news_video_author"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20dp"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/textSize_xs"
            tools:text="21分钟前"/>

        <ImageView
            android:id="@+id/iv_shield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:paddingTop="@dimen/px20dp"
            android:paddingBottom="@dimen/px20dp"
            android:paddingLeft="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/px20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_home_icon_cha"
            android:visibility="visible"/>

    </RelativeLayout>

    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true"/>


</LinearLayout>