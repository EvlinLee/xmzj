<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/person_dialog_box_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/px30dp"
    android:paddingRight="@dimen/px30dp"
    android:paddingLeft="@dimen/px30dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增分类"
        android:gravity="center"
        android:layout_marginBottom="@dimen/px30dp"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/textSize_m" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px250dp"
        android:layout_marginBottom="@dimen/px30dp"
        android:background="@drawable/shap_introduct_bg"
        android:gravity="left"
        android:padding="@dimen/px20dp"
        android:textSize="@dimen/textSize_m" />

    <View
        style="@style/item_line"
        />
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m" />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divide_line"
            />
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/btn_nornal"
            android:textSize="@dimen/textSize_m" />
    </LinearLayout>

</LinearLayout>