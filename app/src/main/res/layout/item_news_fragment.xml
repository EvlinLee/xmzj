<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_news_item_root"
    style="@style/item_click_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px180dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginRight="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="left"
                android:maxLines="2"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_ml"
                tools:text="我用我的心，去看去感觉，就算是执迷，让我执迷不悔" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_news_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:visibility="gone"
                    tools:src="@drawable/news_icon_top"
                    tools:visibility="visible"/>


                <TextView
                    android:id="@+id/tv_news_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textColor="@color/text_color_999"
                    android:textSize="@dimen/textSize_xs"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="8"
                    tools:text="作者作者作者作者作者" />

                <TextView
                    android:id="@+id/tv_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px12dp"
                    android:textColor="@color/text_color_999"
                    android:textSize="@dimen/textSize_xs"
                    tools:text="21分钟前" />

                <TextView
                    android:id="@+id/tv_read_count"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px12dp"
                    android:textColor="@color/text_color_999"
                    android:visibility="gone"
                    android:textSize="@dimen/textSize_xs"
                    tools:text="阅读:200" />

                <ImageView
                    android:id="@+id/iv_shield"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/margin_tiny"
                    android:paddingLeft="@dimen/margin_small"
                    android:scaleType="centerCrop"
                    android:src="@drawable/circle_home_icon_cha"
                    android:visibility="visible"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_news_cover"
            android:layout_width="@dimen/px210dp"
            android:layout_height="@dimen/px147dp"
            android:layout_marginBottom="@dimen/px20dp"
            android:layout_marginLeft="@dimen/px10dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_marginTop="@dimen/px20dp"
            android:scaleType="centerCrop"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_audit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px10dp"
            android:layout_marginRight="@dimen/px10dp"
            android:layout_marginTop="@dimen/px10dp"
            android:background="@drawable/shape_lanuch_btn"
            android:visibility="gone"
            android:paddingBottom="@dimen/px10dp"
            android:paddingLeft="@dimen/px30dp"
            android:paddingRight="@dimen/px30dp"
            android:paddingTop="@dimen/px10dp"
            android:text="审核"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

    <View style="@style/item_line" />
</LinearLayout>

