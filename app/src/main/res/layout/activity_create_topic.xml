<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_divide_line"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/module_divide_line"
        android:orientation="vertical">

        <include layout="@layout/layout_live_intro_module_space" />

        <RelativeLayout
            android:id="@+id/rl_live_intro_setting_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="设置背景"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <ImageView
                android:id="@+id/iv_next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more" />

            <ImageView
                android:id="@+id/iv_live_intro_setting_head"
                android:layout_width="@dimen/px134dp"
                android:layout_height="@dimen/px90dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next1"
                android:src="@drawable/live_list_place_holder" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:background="@color/color_ffffff">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/px20dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_middle"
                android:text="课堂主题"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_live_topic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/textView6"
                android:background="@color/transparent"
                android:gravity="end|center_vertical"
                android:hint="请输入课堂主题"
                android:maxLength="24"
                android:paddingRight="@dimen/margin_middle"
                android:singleLine="true"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <View
                style="@style/item_line"
                android:layout_below="@id/et_live_topic" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_choose_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:clickable="true"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_choose_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_middle"
                android:text="类型选择"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <TextView
                android:id="@+id/tv_type_selector"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_choose_type"
                android:background="@color/white"
                android:clickable="true"
                android:drawablePadding="@dimen/margin_small"
                android:drawableRight="@drawable/person_icon_more"
                android:gravity="end|center_vertical"
                android:paddingLeft="@dimen/px20dp"
                android:paddingRight="@dimen/margin_middle"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/textSize_m"
                tools:text="请选择" />

            <View
                style="@style/item_line"
                android:layout_below="@id/tv_type_selector" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff">

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_middle"
                android:text="课程类型"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_label"
                android:background="@color/color_ffffff"
                android:drawablePadding="@dimen/margin_small"
                android:drawableRight="@drawable/person_icon_more"
                android:gravity="end|center_vertical"
                android:hint="请选择课程类型"
                android:paddingRight="@dimen/margin_middle"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <View
                style="@style/item_line"
                android:layout_below="@id/tv_type" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff">

            <TextView
                android:id="@+id/tv_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_middle"
                android:text="开始时间"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_label_time"
                android:background="@color/color_ffffff"
                android:drawablePadding="@dimen/margin_small"
                android:drawableRight="@drawable/person_icon_more"
                android:gravity="end|center_vertical"
                android:hint="请选择开始时间"
                android:paddingRight="@dimen/margin_middle"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <View
                style="@style/item_line"
                android:layout_below="@id/tv_start_time" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:background="@color/color_ffffff">

            <TextView
                android:id="@+id/tv_label_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_middle"
                android:text="课堂主讲人"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_teacher"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_label_teacher"
                android:background="@color/transparent"
                android:gravity="end|center_vertical"
                android:hint="请输入主讲人"
                android:maxLength="10"
                android:paddingRight="@dimen/margin_middle"
                android:singleLine="true"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <View
                style="@style/item_line"
                android:layout_below="@id/edit_teacher" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff">

            <TextView
                android:id="@+id/tv_label_teacher_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_middle"
                android:text="主讲人介绍"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_teacher_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_label_teacher_info"
                android:background="@color/color_ffffff"
                android:drawablePadding="@dimen/margin_small"
                android:drawableRight="@drawable/person_icon_more"
                android:gravity="end|center_vertical"
                android:hint="请输入主讲人介绍"
                android:maxLines="1"
                android:paddingRight="@dimen/margin_middle"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <View
                style="@style/item_line"
                android:layout_below="@id/tv_teacher_info" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_live_intro_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/selector_touch"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/px24dp"
            android:paddingRight="@dimen/margin_middle"
            android:paddingTop="@dimen/margin_small"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="上传视频"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />

            <ImageView
                android:id="@+id/iv_next7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon_more" />

            <ImageView
                android:id="@+id/iv_live_intro_video"
                android:layout_width="@dimen/px134dp"
                android:layout_height="@dimen/px90dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px16dp"
                android:layout_toLeftOf="@+id/iv_next7"
                android:src="@drawable/live_list_place_holder" />

        </RelativeLayout>

        <View style="@style/item_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff">

            <TextView
                android:id="@+id/tv_label_live_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_middle"
                android:text="课堂简介"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <TextView
                android:id="@+id/tv_live_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin_middle"
                android:layout_toEndOf="@id/tv_label_live_info"
                android:background="@color/color_ffffff"
                android:drawablePadding="@dimen/margin_small"
                android:drawableRight="@drawable/person_icon_more"
                android:gravity="end|center_vertical"
                android:hint="请输入课堂介绍"
                android:maxLines="1"
                android:paddingRight="@dimen/margin_middle"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/textSize_m" />


            <View
                style="@style/item_line"
                android:layout_below="@id/tv_live_info" />

        </RelativeLayout>


        <TextView
            android:id="@+id/btn_class_protocol"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80dp"
            android:drawablePadding="@dimen/px20dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_middle"
            android:text="查看创建课堂协议>"
            android:textColor="@color/color_2b8cff"
            android:textSize="@dimen/textSize_m" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80dp"
            android:drawablePadding="@dimen/px20dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_middle"
            android:text="选择课堂形式"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/textSize_m"
            android:visibility="gone" />

        <com.gxtc.huchuan.widget.MultiRadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/margin_middle"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_lecture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_rb_topic_bg"
                    android:drawablePadding="@dimen/px20dp"
                    android:text="讲座形式"
                    android:textSize="@dimen/textSize_m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px20dp"
                    android:text="适合图片较少的分享"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m" />

                <View
                    style="@style/horizontal_line"
                    android:layout_marginTop="@dimen/px20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rb_slide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_rb_topic_bg"
                    android:drawablePadding="@dimen/px20dp"
                    android:text="幻灯片形式"
                    android:textSize="@dimen/textSize_m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px20dp"
                    android:text="适合图片较多分享"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/textSize_m" />
            </LinearLayout>
        </com.gxtc.huchuan.widget.MultiRadioGroup>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88dp"
            android:layout_marginBottom="@dimen/margin_larger"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_larger"
            android:background="@drawable/btn_blue_selector_no_stroke"
            android:enabled="false"
            android:text="下一步"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/textSize_l" />
    </LinearLayout>

</ScrollView>
